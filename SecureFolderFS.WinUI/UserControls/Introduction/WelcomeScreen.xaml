<UserControl
    x:Class="SecureFolderFS.WinUI.UserControls.Introduction.WelcomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowSpacing="48">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image
            Width="56"
            Height="56"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Source="/Assets/AppAssets/AppIcon.png" />

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="25"
            FontWeight="Bold"
            Text="Welcome to SecureFolderFS!" />

        <TextBlock
            Grid.Row="2"
            Margin="0,-32,0,0"
            Padding="80,0,80,0"
            FontSize="14"
            Opacity="0.8"
            Text="Thank you for trying out SecureFolderFS. To help get you started, this presentation will guide you through the app's core concepts and most notable features."
            TextAlignment="Center"
            TextWrapping="WrapWholeWords" />
    </Grid>
</UserControl>
