<UserControl
    x:Class="SecureFolderFS.AvaloniaUI.UserControls.Navigation.ContentNavigationControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:anim="using:SecureFolderFS.AvaloniaUI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ContentPresenter
        x:Name="ContentPresenter"
        x:FieldModifier="protected"
        Content="{Binding CurrentContent, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
        <ContentPresenter.RenderTransform>
            <TransformGroup>
                <TranslateTransform />
                <ScaleTransform />
            </TransformGroup>
        </ContentPresenter.RenderTransform>
    </ContentPresenter>
</UserControl>