<UserControl
    x:Class="SecureFolderFS.AvaloniaUI.UserControls.Navigation.FrameNavigationControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ui:Frame x:Name="ContentFrame" x:FieldModifier="public" CacheSize="0">
        <ContentControl.RenderTransform>
            <TransformGroup>
                <TranslateTransform />
                <ScaleTransform />
            </TransformGroup>
        </ContentControl.RenderTransform>
    </ui:Frame>
</UserControl>