<Page
    x:Class="SecureFolderFS.Uno.Views.VaultWizard.MainWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tuc="using:CommunityToolkit.WinUI.Controls"
    xmlns:uc="using:SecureFolderFS.Uno.UserControls"
    xmlns:vc="using:SecureFolderFS.Uno.ValueConverters"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Views.Wizard"
    Width="464"
    mc:Ignorable="d">

    <Page.Resources>
        <vc:GenericEnumConverter x:Key="GenericEnumConverter" />
        <DataTemplate x:Key="VaultTemplate" x:DataType="vm:WizardChoiceViewModel">
            <StackPanel Spacing="4">
                <InfoBar
                    IsClosable="False"
                    IsOpen="True"
                    Message="{x:Bind SelectionInfoBar.Message, Mode=OneWay}"
                    Severity="{x:Bind SelectionInfoBar.Severity, Mode=OneWay, Converter={StaticResource GenericEnumConverter}}" />
                <uc:VaultFolderSelectionControl Message="{x:Bind SelectedLocation, Mode=OneWay}" OpenCommand="{x:Bind OpenFolderCommand, Mode=OneWay}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Spacing="16">
        <!--<tuc:Segmented
            x:Name="SegmentedControl"
            HorizontalAlignment="Center"
            SelectedIndex="0"
            SelectionChanged="Segmented_SelectionChanged">
            <tuc:SegmentedItem Content="Add existing" Tag="EXISTING" />
            <tuc:SegmentedItem Content="Create new" Tag="CREATE" />
        </tuc:Segmented>-->
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="2">
            <Button
                x:Name="CreateNewButton"
                Height="28"
                Padding="12,0"
                Click="SegmentButton_Click"
                Content="Create new"
                Style="{ThemeResource AccentButtonStyle}"
                Tag="CREATE" />
            <Button
                Height="28"
                Padding="12,0"
                Click="SegmentButton_Click"
                Content="Add existing"
                Tag="EXISTING" />
        </StackPanel>

        <ContentControl
            HorizontalContentAlignment="Stretch"
            Content="{x:Bind ViewModel.CurrentViewModel, Mode=OneWay}"
            ContentTemplate="{StaticResource VaultTemplate}">
            <ContentControl.ContentTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </ContentControl.ContentTransitions>
        </ContentControl>
    </StackPanel>
</Page>
