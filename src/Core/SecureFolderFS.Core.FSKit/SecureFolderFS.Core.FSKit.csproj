<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net10.0-macos</TargetFramework>
        <OutputType>Exe</OutputType>
        <Nullable>enable</Nullable>
        <SupportedOSPlatformVersion>15.0</SupportedOSPlatformVersion>
        <UseAppHost>true</UseAppHost>
        <ApplicationId>com.securefolder.fskit.xpc</ApplicationId>

        <!-- Create app bundle -->
        <CreatePackage>true</CreatePackage>
        <EnableDefaultMacOSItems>true</EnableDefaultMacOSItems>

        <!-- Use our entitlements file -->
        <CodesignEntitlements>Entitlements.plist</CodesignEntitlements>

        <TrimMode Condition="'$(Configuration)' == 'Release'">full</TrimMode>
    </PropertyGroup>

    <ItemGroup>
        <None Include="Info.plist">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="Entitlements.plist" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\Sdk\SecureFolderFS.Sdk.Ipc\SecureFolderFS.Sdk.Ipc.csproj" />
    </ItemGroup>
</Project>
