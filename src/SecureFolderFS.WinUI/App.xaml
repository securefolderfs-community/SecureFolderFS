<Application
    x:Class="SecureFolderFS.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureFolderFS.WinUI">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--  Other dictionaries  -->
                <ResourceDictionary Source="ResourceDictionaries/ColorResources.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/ImageResources.xaml" />

                <!--  Other app resources  -->
                <ResourceDictionary>
                    <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent" />
                    <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
