<ContentDialog
    x:Class="SecureFolderFS.WinUI.Dialogs.AgreementDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.WinUI.Helpers"
    xmlns:l="using:SecureFolderFS.WinUI.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Before we continue..."
    Closing="AgreementDialog_Closing"
    DefaultButton="Primary"
    PrimaryButtonClick="AgreementDialog_PrimaryButtonClick"
    PrimaryButtonText="{l:ResourceString Name=Continue}"
    RequestedTheme="{x:Bind h:WindowsThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel
        Grid.Row="0"
        Padding="24"
        VerticalAlignment="Center"
        Spacing="24">
        <FontIcon FontSize="36" Glyph="&#xE73E;" />
        <TextBlock TextAlignment="Center" TextWrapping="Wrap">
            Please review and agree to our<Hyperlink NavigateUri="https://github.com/securefolderfs-community/SecureFolderFS/blob/master/PRIVACY.md">Privacy Policy</Hyperlink>
            .</TextBlock>
    </StackPanel>
</ContentDialog>
