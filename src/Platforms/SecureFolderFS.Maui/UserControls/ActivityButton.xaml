<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.ActivityButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vc="clr-namespace:SecureFolderFS.Maui.ValueConverters"
    x:Name="ThisControl">

    <ContentView.Resources>
        <vc:BoolInvertConverter x:Key="BoolInvertConverter" />
    </ContentView.Resources>

    <Grid BindingContext="{x:Reference Name=ThisControl}">
        <Button
            x:Name="ActionButton"
            Padding="0"
            Command="{Binding Command, Mode=OneWay}"
            FontAttributes="{Binding FontAttributes, Mode=OneWay}"
            IsEnabled="{Binding IsProgressing, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
            Style="{Binding ButtonStyle, Mode=OneWay}" />
        <ActivityIndicator Margin="8,0" IsRunning="{Binding IsProgressing, Mode=OneWay}" />
    </Grid>
</ContentView>
