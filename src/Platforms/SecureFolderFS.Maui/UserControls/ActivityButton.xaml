<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.ActivityButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ThisControl">

    <Grid BindingContext="{x:Reference Name=ThisControl}">
        <Button x:Name="ActionButton" Command="{Binding Command, Mode=OneWay}" />
        <ActivityIndicator IsRunning="{Binding IsProgressing, Mode=OneWay}" />
    </Grid>
</ContentView>
