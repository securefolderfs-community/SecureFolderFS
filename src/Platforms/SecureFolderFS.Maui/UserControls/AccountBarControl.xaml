<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.AccountBarControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tv="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">

    <Grid Padding="16,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <tv:AvatarView
            x:Name="UserAvatar"
            Grid.Column="0"
            Margin="0,0,16,0"
            BorderWidth="0"
            CornerRadius="48"
            HeightRequest="32"
            WidthRequest="32" />

        <VerticalStackLayout Grid.Column="1">
            <Label x:Name="UserTitle" LineBreakMode="TailTruncation" />
            <Label
                x:Name="UserSubtitle"
                LineBreakMode="TailTruncation"
                Opacity="0.8" />
        </VerticalStackLayout>
    </Grid>
</ContentView>
