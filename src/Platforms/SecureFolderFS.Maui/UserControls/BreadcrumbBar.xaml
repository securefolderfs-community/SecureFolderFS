<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.BreadcrumbBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:vc="clr-namespace:SecureFolderFS.Maui.ValueConverters"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Components;assembly=SecureFolderFS.Sdk"
    x:Name="ThisControl">

    <ContentView.Resources>
        <vc:BreadcrumbConverter x:Key="BreadcrumbConverter" />

        <!--  Pill background for the active (leading) item  -->
        <Style x:Key="BreadcrumbPillStyle" TargetType="Border">
            <Setter Property="StrokeShape" Value="RoundRectangle 20" />
            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource PrimaryLightColor}, Dark={StaticResource PrimaryDarkColor}}" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondaryLightColor}, Dark={StaticResource SecondaryDarkColor}}" />
        </Style>
    </ContentView.Resources>

    <CollectionView
        x:DataType="local:BreadcrumbBar"
        BindingContext="{x:Reference ThisControl}"
        ItemSizingStrategy="MeasureAllItems"
        ItemsSource="{Binding ItemsSource, Mode=OneWay}"
        SelectionMode="None"
        VerticalOptions="Center">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="vm:BreadcrumbItemViewModel">
                <HorizontalStackLayout
                    Padding="0,4"
                    Spacing="0"
                    VerticalOptions="Center">

                    <!--  Breadcrumb label, wrapped in a pill when it's the leading (current) item  -->
                    <Border BackgroundColor="{Binding IsLeading, Converter={StaticResource BreadcrumbConverter}, ConverterParameter='Background'}" Style="{StaticResource BreadcrumbPillStyle}">
                        <Label
                            FontAttributes="{Binding IsLeading, Converter={StaticResource BreadcrumbConverter}, ConverterParameter='FontAttributes'}"
                            FontSize="14"
                            Opacity="{Binding IsLeading, Converter={StaticResource BreadcrumbConverter}, ConverterParameter='LabelOpacity'}"
                            Text="{Binding Title, Mode=OneWay}"
                            TextColor="{Binding IsLeading, Converter={StaticResource BreadcrumbConverter}, ConverterParameter='TextColor'}"
                            VerticalOptions="Center" />
                    </Border>

                    <!--  Separator chevron, hidden on the last (leading) item  -->
                    <Grid
                        Margin="-4,0,4,0"
                        Opacity="{Binding IsLeading, Mode=OneWay, Converter={StaticResource BoolOpacityConverter}, ConverterParameter='invert'}"
                        VerticalOptions="Center">
                        <mi:MauiIcon
                            Icon="{mi_material:Material ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="14"
                            OnPlatforms="Android"
                            VerticalOptions="Center" />
                        <mi:MauiIcon
                            Icon="{mi_cupertino:Cupertino ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="14"
                            OnPlatforms="iOS"
                            VerticalOptions="Center" />
                    </Grid>

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Command, Mode=OneWay}" CommandParameter="{Binding}" />
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="0" Orientation="Horizontal" />
        </CollectionView.ItemsLayout>
    </CollectionView>
</ContentView>
