<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.PasswordControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui">

    <Grid
        x:Name="RootGrid"
        x:DataType="local:PasswordControl"
        HorizontalOptions="Fill">
        <OnPlatform x:TypeArguments="View">
            <On Platform="Android">
                <mdc:TextField
                    HorizontalOptions="Fill"
                    InputType="Password"
                    LabelText="{Binding Placeholder, Mode=OneWay, FallbackValue={l:ResourceString Name=Password}}"
                    SupportingText="{Binding Title, Mode=OneWay, FallbackValue={l:ResourceString Name=EnterPassword}}"
                    Text="{Binding UnsecurePassword, Mode=TwoWay}"
                    WidthRequest="320" />
            </On>
            <On Platform="iOS">
                <VerticalStackLayout Spacing="2">
                    <Label Opacity="0.6" Text="{Binding Title, Mode=OneWay, FallbackValue={l:ResourceString Name=EnterPassword}}" />
                    <Entry
                        IsPassword="True"
                        Placeholder="{Binding Placeholder, Mode=OneWay, FallbackValue={l:ResourceString Name=Password}}"
                        Text="{Binding UnsecurePassword, Mode=TwoWay}" />
                </VerticalStackLayout>
            </On>
        </OnPlatform>
    </Grid>
</ContentView>
