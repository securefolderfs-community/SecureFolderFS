<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.LoginControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:ts="using:SecureFolderFS.Maui.TemplateSelectors"
    xmlns:vm="clr-namespace:SecureFolderFS.UI.ViewModels.Authentication;assembly=SecureFolderFS.UI"
    xmlns:vm2="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Authentication;assembly=SecureFolderFS.Sdk"
    x:Name="ThisLoginControl">

    <ContentView.Resources>

        <!--  Password Template  -->
        <DataTemplate x:Key="PasswordTemplate" x:DataType="vm:PasswordLoginViewModel">
            <ContentView HorizontalOptions="Fill">
                <VerticalStackLayout HorizontalOptions="Fill" Spacing="12">
                    <local:PasswordControl
                        HorizontalOptions="Fill"
                        PasswordSubmittedCommand="{Binding ProvideCredentialsCommand}"
                        ShowInvalidPasswordMessage="{Binding IsPasswordInvalid, Mode=TwoWay}"
                        UnsecurePassword="{Binding PrimaryPassword, Mode=TwoWay}" />
                    <local:ActivityButton
                        ButtonStyle="{StaticResource AccentButtonStyle}"
                        Command="{Binding ProvideCredentialsCommand}"
                        FontAttributes="Bold"
                        HorizontalOptions="Fill"
                        IsProgressing="{Binding ProvideCredentialsCommand.IsRunning, Mode=OneWay}"
                        IsVisible="{Binding ProvideContinuationButton, Mode=OneWay, Source={x:Reference Name=ThisLoginControl}}"
                        Text="{l:ResourceString Rid=Continue}" />
                </VerticalStackLayout>
            </ContentView>
        </DataTemplate>

        <!--  Key File Template  -->
        <DataTemplate x:Key="KeyFileTemplate" x:DataType="vm:KeyFileLoginViewModel">
            <ContentView>
                <VerticalStackLayout Spacing="16">

                    <!--  Icon + description card  -->
                    <Border
                        Padding="20,18"
                        Background="{StaticResource ThemeSecondaryColorBrush}"
                        StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Border
                                Background="{StaticResource ThemeElevatedFillPrimaryColorBrush}"
                                HeightRequest="48"
                                HorizontalOptions="Center"
                                StrokeThickness="0"
                                WidthRequest="48">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Grid>
                                    <mi:MauiIcon
                                        HorizontalOptions="Center"
                                        Icon="{mi_material:Material Key}"
                                        IconColor="{AppThemeBinding Light={StaticResource PrimaryLightColor},
                                                                    Dark={StaticResource PrimaryDarkColor}}"
                                        IconSize="22"
                                        OnPlatforms="Android"
                                        VerticalOptions="Center" />
                                    <mi:MauiIcon
                                        HorizontalOptions="Center"
                                        Icon="{mi_cupertino:Cupertino Doc}"
                                        IconColor="{AppThemeBinding Light={StaticResource PrimaryLightColor},
                                                                    Dark={StaticResource PrimaryDarkColor}}"
                                        IconSize="22"
                                        OnPlatforms="iOS"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>
                            <Label
                                FontSize="14"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Opacity="0.6"
                                Text="{l:ResourceString Rid=LoginKeyFile}" />
                        </VerticalStackLayout>
                    </Border>

                    <!--  Authenticate button  -->
                    <local:ActivityButton
                        ButtonStyle="{StaticResource AccentButtonStyle}"
                        Command="{Binding ProvideCredentialsCommand}"
                        FontAttributes="Bold"
                        HorizontalOptions="Fill"
                        IsProgressing="{Binding ProvideCredentialsCommand.IsRunning, Mode=OneWay}"
                        Text="{l:ResourceString Rid=Authenticate}" />

                </VerticalStackLayout>
            </ContentView>
        </DataTemplate>

        <!--  Error Template  -->
        <DataTemplate x:Key="ErrorTemplate" x:DataType="vm2:ErrorViewModel">
            <ContentView>
                <local:ErrorControl ExceptionMessage="{Binding ExceptionMessage, Mode=OneWay}" />
            </ContentView>
        </DataTemplate>

        <!--  Unsupported Template  -->
        <DataTemplate x:Key="UnsupportedTemplate" x:DataType="vm2:UnsupportedViewModel">
            <ContentView>
                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Opacity="0.8"
                    Text="{Binding Title, Mode=OneWay}" />
            </ContentView>
        </DataTemplate>
    </ContentView.Resources>

    <Grid x:Name="RootGrid" x:DataType="local:LoginControl">
        <local:ContentPresentation Presentation="{Binding CurrentViewModel, Mode=OneWay}">
            <local:ContentPresentation.TemplateSelector>
                <ts:LoginTemplateSelector
                    ErrorTemplate="{StaticResource ErrorTemplate}"
                    KeyFileTemplate="{StaticResource KeyFileTemplate}"
                    PasswordTemplate="{StaticResource PasswordTemplate}"
                    UnsupportedTemplate="{StaticResource UnsupportedTemplate}" />
            </local:ContentPresentation.TemplateSelector>
        </local:ContentPresentation>
    </Grid>
</ContentView>
