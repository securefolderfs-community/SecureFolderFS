<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.SkottieView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sk="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
    x:Name="ThisControl">

    <sk:SKCanvasView
        x:Name="CanvasView"
        HeightRequest="{Binding HeightRequest, Source={x:Reference ThisControl}}"
        PaintSurface="CanvasView_PaintSurface"
        WidthRequest="{Binding WidthRequest, Source={x:Reference ThisControl}}" />
</ContentView>
