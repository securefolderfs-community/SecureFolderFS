<ContentView
    x:Class="SecureFolderFS.Maui.UserControls.Browser.ItemProperty"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:SecureFolderFS.Maui.Localization"
    x:Name="ThisControl">

    <VerticalStackLayout Spacing="0">

        <Grid
            Padding="0,10"
            ColumnDefinitions="*,Auto"
            ColumnSpacing="12"
            VerticalOptions="Center">

            <!--  Title + Subtitle  -->
            <VerticalStackLayout
                Grid.Column="0"
                Spacing="2"
                VerticalOptions="Center">
                <Label
                    FontSize="12"
                    Opacity="0.5"
                    Text="{Binding Title, Mode=OneWay, Source={x:Reference ThisControl}}"
                    TextTransform="Uppercase" />
                <Label
                    FontAttributes="Bold"
                    FontSize="15"
                    LineBreakMode="TailTruncation"
                    Text="{Binding Subtitle, Mode=OneWay, Source={x:Reference ThisControl}}" />
            </VerticalStackLayout>

            <!--  Copy button  -->
            <Button
                Grid.Column="1"
                Command="{Binding Command, Mode=OneWay, Source={x:Reference ThisControl}}"
                CommandParameter="{Binding CommandParameter, Mode=OneWay, Source={x:Reference ThisControl}}"
                HorizontalOptions="End"
                Style="{OnPlatform Android={StaticResource DefaultButtonStyle},
                                   iOS={StaticResource NoBackgroundButtonStyle}}"
                Text="{l:ResourceString Rid=Copy}"
                VerticalOptions="Center" />
        </Grid>

        <!--  Row divider, hidden on the last item  -->
        <BoxView
            HeightRequest="1"
            IsVisible="{Binding IsLastItem, Mode=OneWay, Source={x:Reference ThisControl}, Converter={StaticResource BoolInvertConverter}}"
            Opacity="0.4"
            Color="{AppThemeBinding Light={StaticResource BorderLightColor},
                                    Dark={StaticResource BorderDarkColor}}" />

    </VerticalStackLayout>
</ContentView>
