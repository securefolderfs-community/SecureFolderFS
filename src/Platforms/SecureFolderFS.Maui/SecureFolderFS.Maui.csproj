    </MauiXaml>
    <MauiXaml Update="Views\Modals\Vault\FilePreviewModalPage.xaml">
      <SubType>Designer</SubType>
    </MauiXaml>
    <MauiXaml Update="Views\Modals\Vault\RecycleBinModalPage.xaml">
