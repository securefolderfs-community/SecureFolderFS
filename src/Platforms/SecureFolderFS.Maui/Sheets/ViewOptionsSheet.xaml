<t49:BottomSheet
    x:Class="SecureFolderFS.Maui.Sheets.ViewOptionsSheet"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:t49="https://schemas.the49.com/dotnet/2023/maui"
    x:Name="ThisSheet"
    BindingContext="{x:Reference ThisSheet}"
    Dismissed="ViewOptionsSheet_Dismissed"
    HasHandle="True">

    <t49:BottomSheet.Detents>
        <t49:MediumDetent />
    </t49:BottomSheet.Detents>

    <Grid>
        <Label Text="{Binding ViewModel.Title, Mode=OneWay}" />
    </Grid>
</t49:BottomSheet>
