<local:ContentPageExtended
    x:Class="SecureFolderFS.Maui.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:vc="clr-namespace:SecureFolderFS.Maui.ValueConverters"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.VaultList;assembly=SecureFolderFS.Sdk"
    Title="{l:ResourceString Rid=MyVaults}"
    ios:Page.LargeTitleDisplay="Always"
    x:DataType="local:MainPage"
    Loaded="MainPage_Loaded">

    <ContentPage.Resources>
        <vc:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
        <vc:NullToBoolConverter x:Key="NullToBoolConverter" />
        <vc:BoolInvertConverter x:Key="BoolInvertConverter" />
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="1"
            Margin="0,0,0,64"
            Padding="12,0"
            InputTransparent="True"
            IsVisible="{Binding ViewModel.VaultListViewModel.HasVaults, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
            Spacing="16"
            VerticalOptions="Center">
            <Image HeightRequest="100" Source="{AppThemeBinding Light={OnPlatform Android='vault_light.svg', iOS='vault_light.png'}, Dark={OnPlatform Android='vault_dark.svg', iOS='vault_dark.png'}}" />
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{l:ResourceString Rid=Welcome}" />
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{l:ResourceString Rid=NoVaultsMessage}" />
        </VerticalStackLayout>

        <ListView
            Grid.Row="1"
            BackgroundColor="Transparent"
            IsVisible="{Binding ViewModel.VaultListViewModel.HasVaults, Mode=OneWay}"
            ItemTapped="ListView_ItemTapped"
            ItemsSource="{Binding ViewModel.VaultListViewModel.Items, Mode=OneWay}"
            RowHeight="64"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:VaultListItemViewModel">
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuFlyoutItem
                                Command="{Binding RemoveVaultCommand}"
                                IsDestructive="True"
                                IsEnabled="{Binding IsUnlocked, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
                                Text="{OnPlatform Android={l:ResourceString Rid=RemoveFromList},
                                                  iOS={l:ResourceString Rid=Remove}}" />
                        </ViewCell.ContextActions>

                        <HorizontalStackLayout Padding="8,2" Spacing="8">
                            <Grid IsVisible="{Binding IsUnlocked, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}" VerticalOptions="Center">
                                <mi:MauiIcon Icon="{mi_material:Material Lock}" OnPlatforms="Android" />
                                <mi:MauiIcon Icon="{mi_cupertino:Cupertino Lock}" OnPlatforms="iOS" />
                            </Grid>
                            <Grid IsVisible="{Binding IsUnlocked, Mode=OneWay}" VerticalOptions="Center">
                                <mi:MauiIcon Icon="{mi_material:Material LockOpen}" OnPlatforms="Android" />
                                <mi:MauiIcon Icon="{mi_cupertino:Cupertino LockOpen}" OnPlatforms="iOS" />
                            </Grid>

                            <VerticalStackLayout VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="{Binding VaultViewModel.Title, Mode=OneWay}"
                                    VerticalOptions="Center" />
                                <Label IsVisible="{Binding VaultViewModel.LastAccessDate, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}" Text="{Binding VaultViewModel.LastAccessDate, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            VerticalOptions="End">
            <OnPlatform x:TypeArguments="View">
                <On Platform="Android">
                    <Button
                        Margin="0,0,16,32"
                        mi:MauiIcon.Value="{mi_material:Material Icon=Add,
                                                                 IconSize=26,
                                                                 IconColor={AppThemeBinding Light={StaticResource PrimaryContrastingDarkColor},
                                                                                            Dark={StaticResource PrimaryContrastingLightColor}}}"
                        Command="{Binding ViewModel.VaultListViewModel.AddNewVaultCommand}"
                        FontSize="16"
                        HorizontalOptions="End"
                        Style="{StaticResource AccentButtonStyle}"
                        Text="{l:ResourceString Rid=NewVault}"
                        TextColor="{AppThemeBinding Light={StaticResource PrimaryContrastingDarkColor},
                                                    Dark={StaticResource PrimaryContrastingLightColor}}"
                        VerticalOptions="End" />
                </On>
            </OnPlatform>
        </Grid>
    </Grid>
</local:ContentPageExtended>
