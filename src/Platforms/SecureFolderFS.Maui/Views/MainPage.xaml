<local:ContentPageExtended
    x:Class="SecureFolderFS.Maui.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.VaultList;assembly=SecureFolderFS.Sdk"
    Title="{l:ResourceString Rid=MyVaults}"
    ios:Page.LargeTitleDisplay="Always"
    x:DataType="local:MainPage"
    Loaded="MainPage_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="1"
            Margin="0,0,0,64"
            Padding="12,0"
            InputTransparent="True"
            IsVisible="{Binding ViewModel.VaultListViewModel.HasVaults, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
            Spacing="16"
            VerticalOptions="Center">
            <Image HeightRequest="100" Source="{AppThemeBinding Light={OnPlatform Android='home_light_vault.svg', iOS='home_dark_vault.png'}, Dark={OnPlatform Android='home_dark_vault.svg', iOS='home_light_vault.png'}}" />
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{l:ResourceString Rid=Welcome}" />
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{l:ResourceString Rid=NoVaultsMessage}" />
        </VerticalStackLayout>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Transparent"
            IsVisible="{Binding ViewModel.VaultListViewModel.HasVaults, Mode=OneWay}"
            ItemsSource="{Binding ViewModel.VaultListViewModel.Items, Mode=OneWay}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:VaultListItemViewModel">
                    <SwipeView Background="{StaticResource ThemeBackgroundFillColorBrush}" HeightRequest="64">
                        <SwipeView.RightItems>
                            <SwipeItem
                                BackgroundColor="Red"
                                Command="{Binding RemoveVaultCommand, Mode=OneWay}"
                                IsDestructive="True"
                                IsEnabled="{Binding IsUnlocked, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
                                Text="{l:ResourceString Rid=Remove}" />
                            <SwipeItem
                                BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryLightColor},
                                                                  Dark={StaticResource SecondaryDarkColor}}"
                                Command="{Binding CustomizeCommand, Mode=OneWay}"
                                CommandParameter="Rename"
                                IsEnabled="{Binding VaultViewModel.CanRename, Mode=OneWay}"
                                Text="{l:ResourceString Rid=Rename}" />
                        </SwipeView.RightItems>

                        <Grid Padding="8,2" ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Column="0"
                                IsVisible="{Binding IsUnlocked, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
                                VerticalOptions="Center">
                                <mi:MauiIcon Icon="{mi_material:Material Lock}" OnPlatforms="Android" />
                                <mi:MauiIcon Icon="{mi_cupertino:Cupertino Lock}" OnPlatforms="iOS" />
                            </Grid>
                            <Grid
                                Grid.Column="0"
                                IsVisible="{Binding IsUnlocked, Mode=OneWay}"
                                VerticalOptions="Center">
                                <mi:MauiIcon Icon="{mi_material:Material LockOpen}" OnPlatforms="Android" />
                                <mi:MauiIcon Icon="{mi_cupertino:Cupertino LockOpen}" OnPlatforms="iOS" />
                            </Grid>

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="{Binding VaultViewModel.Title, Mode=OneWay}"
                                    VerticalOptions="Center" />
                                <Label IsVisible="{Binding VaultViewModel.LastAccessDate, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}" Text="{Binding VaultViewModel.LastAccessDate, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}" />
                            </VerticalStackLayout>

                            <Grid Grid.Column="2" Margin="0,0,8,0">
                                <mi:MauiIcon
                                    Icon="{mi_material:Material ChevronRight}"
                                    IconSize="16"
                                    OnPlatforms="Android"
                                    Opacity="0.8" />
                                <mi:MauiIcon
                                    Icon="{mi_cupertino:Cupertino ChevronRight}"
                                    IconSize="16"
                                    OnPlatforms="iOS"
                                    Opacity="0.8" />
                            </Grid>

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapRecognizer_Tapped" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="1"
            Clicked="Button_OnClicked"
            HorizontalOptions="Center"
            Text="Introduction Screen"
            VerticalOptions="End" />

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            VerticalOptions="End">
            <OnPlatform x:TypeArguments="View">
                <On Platform="Android">
                    <Button
                        Margin="0,0,16,32"
                        mi:MauiIcon.Value="{mi_material:Material Icon=Add,
                                                                 IconSize=26,
                                                                 IconColor={AppThemeBinding Light={StaticResource PrimaryContrastingDarkColor},
                                                                                            Dark={StaticResource PrimaryContrastingLightColor}}}"
                        Command="{Binding ViewModel.VaultListViewModel.AddNewVaultCommand}"
                        FontSize="16"
                        HorizontalOptions="End"
                        Style="{StaticResource AccentButtonStyle}"
                        Text="{l:ResourceString Rid=NewVault}"
                        TextColor="{AppThemeBinding Light={StaticResource PrimaryContrastingDarkColor},
                                                    Dark={StaticResource PrimaryContrastingLightColor}}"
                        VerticalOptions="End" />
                </On>
            </OnPlatform>
        </Grid>
    </Grid>
</local:ContentPageExtended>
