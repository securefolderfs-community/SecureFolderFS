<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Vault.RecycleBinModalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Vault"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls;assembly=SecureFolderFS.Sdk"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:RecycleBinModalPage">

    <md:BaseModalPage.ModalContent>
        <CollectionView ItemsSource="{Binding ViewModel.Items, Mode=OneWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:RecycleBinItemViewModel">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding Title, Mode=OneWay}" />
                        <Button Command="{Binding RecoverCommand}" Text="Recover item" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
