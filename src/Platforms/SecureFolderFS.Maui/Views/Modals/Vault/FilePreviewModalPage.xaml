<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Vault.FilePreviewModalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Vault"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:mt="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:ts="clr-namespace:SecureFolderFS.Maui.TemplateSelectors"
    xmlns:uc="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:ucc="clr-namespace:SecureFolderFS.Maui.UserControls.Common"
    xmlns:vc="clr-namespace:SecureFolderFS.Maui.ValueConverters"
    xmlns:vlc="clr-namespace:LibVLCSharp.MAUI;assembly=LibVLCSharp.MAUI"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Previewers;assembly=SecureFolderFS.Sdk"
    x:Name="ThisPage"
    x:DataType="local:FilePreviewModalPage"
    IsImmersive="True">

    <md:BaseModalPage.Resources>
        <vc:ImageToSourceConverter x:Key="ImageToSourceConverter" />

        <DataTemplate x:Key="CarouselTemplate" x:DataType="vm:CarouselPreviewerViewModel">
            <ucc:GalleryView
                HeightRequest="400"
                SizeChanged="Gallery_Loaded"
                WidthRequest="300" />
        </DataTemplate>

        <DataTemplate x:Key="VideoTemplate" x:DataType="vm:VideoPreviewerViewModel">
            <uc:PanRouter PanUpdatedCommand="{Binding GalleryView.PanUpdatedCommand, Mode=OneWay, Source={x:Reference ThisPage}}">
                <uc:PanRouter.RouterContent>
                    <vlc:MediaPlayerElement Loaded="MediaPlayerElement_Loaded" />
                    <!--  <mt:MediaElement  -->
                    <!--  ShouldAutoPlay="True"  -->
                    <!--  ShouldLoopPlayback="True"  -->
                    <!--  Source="{Binding Source, Mode=OneWay, Converter={StaticResource MediaToSourceConverter}}" />  -->
                </uc:PanRouter.RouterContent>
            </uc:PanRouter>
        </DataTemplate>
        <DataTemplate x:Key="ImageTemplate" x:DataType="vm:ImagePreviewerViewModel">
            <ucc:PanPinchContainer PanUpdatedCommand="{Binding GalleryView.PanUpdatedCommand, Mode=OneWay, Source={x:Reference ThisPage}}">
                <Image Source="{Binding Source, Mode=OneWay, Converter={StaticResource ImageToSourceConverter}}" />
            </ucc:PanPinchContainer>
        </DataTemplate>
        <DataTemplate x:Key="TextTemplate" x:DataType="vm:TextPreviewerViewModel">
            <ScrollView
                Padding="8"
                HorizontalScrollBarVisibility="Always"
                Orientation="Both"
                VerticalScrollBarVisibility="Always">
                <Label Text="{Binding Source, Mode=OneWay}" />
            </ScrollView>
        </DataTemplate>
        <DataTemplate x:Key="FallbackTemplate" x:DataType="vm:FallbackPreviewerViewModel">
            <VerticalStackLayout Spacing="16">
                <Grid HorizontalOptions="Center">
                    <mi:MauiIcon Icon="{mi_material:Material Icon=Description, IconSize=50}" OnPlatforms="Android" />
                    <mi:MauiIcon Icon="{mi_cupertino:Cupertino Icon=Doc, IconSize=50}" OnPlatforms="iOS" />
                </Grid>

                <VerticalStackLayout>
                    <Label
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{Binding Source, Mode=OneWay}" />
                    <Label
                        HorizontalOptions="Center"
                        Opacity="0.8"
                        Text="{l:ResourceString Rid=NoPreviewAvailable}" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </DataTemplate>
    </md:BaseModalPage.Resources>

    <md:BaseModalPage.ModalContent>
        <Grid>
            <Border
                HeightRequest="100"
                StrokeThickness="0"
                VerticalOptions="Start"
                ZIndex="5">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0.3" Color="{AppThemeBinding Light={StaticResource ElevatedFillPrimaryLightColor}, Dark={StaticResource ElevatedFillPrimaryDarkColor}}" />
                        <GradientStop Offset="1" Color="{AppThemeBinding Light={StaticResource LightTransparentColor}, Dark={StaticResource DarkTransparentColor}}" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid
                    Padding="16,0"
                    HeightRequest="75"
                    VerticalOptions="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding ViewModel.PreviewerViewModel.Title, Mode=OneWay}"
                        VerticalOptions="Center" />
                    <Button
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Style="{StaticResource TransparentButtonStyle}"
                        Text="Test"
                        VerticalOptions="Center" />
                </Grid>
            </Border>

            <uc:ContentPresentation
                x:Name="Presentation"
                Presentation="{Binding ViewModel.PreviewerViewModel, Mode=OneWay}"
                ZIndex="1">
                <uc:ContentPresentation.TemplateSelector>
                    <ts:PreviewerTemplateSelector
                        CarouselTemplate="{StaticResource CarouselTemplate}"
                        FallbackTemplate="{StaticResource FallbackTemplate}"
                        ImageTemplate="{StaticResource ImageTemplate}"
                        TextTemplate="{StaticResource TextTemplate}"
                        VideoTemplate="{StaticResource VideoTemplate}" />
                </uc:ContentPresentation.TemplateSelector>
            </uc:ContentPresentation>
        </Grid>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
