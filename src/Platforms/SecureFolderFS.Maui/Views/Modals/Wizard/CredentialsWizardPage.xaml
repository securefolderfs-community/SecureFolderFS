<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Wizard.CredentialsWizardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Wizard"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mtk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:uc="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:ucc="clr-namespace:SecureFolderFS.Maui.UserControls.Common"
    xmlns:uco="clr-namespace:SecureFolderFS.Maui.UserControls.Options"
    xmlns:vc="clr-namespace:SecureFolderFS.Maui.ValueConverters"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Authentication;assembly=SecureFolderFS.Sdk"
    xmlns:vm2="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls;assembly=SecureFolderFS.Sdk"
    x:Name="ThisPage"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:CredentialsWizardPage"
    CloseCommand="{Binding OverlayViewModel.CancellationCommand, Mode=OneWay}"
    CloseEnabled="{Binding ViewModel.CanCancel, Mode=OneWay}"
    CloseText="{Binding OverlayViewModel.SecondaryText, Mode=OneWay}"
    PrimaryCommand="{Binding OverlayViewModel.ContinuationCommand, Mode=OneWay}"
    PrimaryEnabled="{Binding ViewModel.CanContinue, Mode=OneWay}"
    PrimaryText="{Binding OverlayViewModel.PrimaryText, Mode=OneWay}">

    <md:BaseModalPage.Resources>
        <vc:ExpandedStateToIconConverter x:Key="ExpandedStateToIconConverter" />
    </md:BaseModalPage.Resources>

    <md:BaseModalPage.ModalContent>
        <VerticalStackLayout
            Margin="{OnPlatform iOS='0,16,0,0'}"
            Padding="16,0"
            Spacing="32"
            VerticalOptions="Start">

            <VerticalStackLayout Spacing="16">
                <ucc:ModernPicker
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center"
                    ItemDisplayBinding="{Binding Title, Mode=OneWay, x:DataType={x:Type vm:AuthenticationViewModel}}"
                    ItemsSource="{Binding ViewModel.AuthenticationOptions}"
                    SelectedItem="{Binding ViewModel.RegisterViewModel.CurrentViewModel, Mode=TwoWay}" />
                <uc:RegisterControl CurrentViewModel="{Binding ViewModel.RegisterViewModel.CurrentViewModel, Mode=OneWay}" HorizontalOptions="Fill" />
            </VerticalStackLayout>

            <mtk:Expander x:Name="OptionsExpander">
                <mtk:Expander.Header>
                    <Grid Padding="16,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="17"
                            Text="{l:ResourceString Rid=AdvancedOptions}" />

                        <mi:MauiIcon
                            Grid.Column="1"
                            Icon="{Binding IsExpanded, Mode=OneWay, Source={x:Reference OptionsExpander}, Converter={StaticResource ExpandedStateToIconConverter}}"
                            IconSize="19" />
                    </Grid>
                </mtk:Expander.Header>
                <mtk:Expander.Content>
                    <uco:OptionsContainer>
                        <uco:OptionsContainer.InnerContent>
                            <VerticalStackLayout>
                                <uco:OptionsControl Title="{l:ResourceString Rid=DataEncryption}">
                                    <uco:OptionsControl.Slot>
                                        <ucc:ModernPicker
                                            HorizontalTextAlignment="Center"
                                            IsTransparent="True"
                                            ItemDisplayBinding="{Binding Title, Mode=OneWay, x:DataType={x:Type vm2:PickerOptionViewModel}}"
                                            ItemsSource="{Binding ViewModel.ContentCiphers, Mode=OneWay}"
                                            MinimumWidthRequest="110"
                                            SelectedItem="{Binding ViewModel.ContentCipher, Mode=TwoWay}" />
                                    </uco:OptionsControl.Slot>
                                </uco:OptionsControl>
                                <uco:OptionsControl Title="{l:ResourceString Rid=NameEncryption}" IsSeparatorVisible="{Binding ViewModel.IsNameCipherEnabled, Mode=OneWay}">
                                    <uco:OptionsControl.Slot>
                                        <ucc:ModernPicker
                                            HorizontalTextAlignment="Center"
                                            IsTransparent="True"
                                            ItemDisplayBinding="{Binding Title, Mode=OneWay, x:DataType={x:Type vm2:PickerOptionViewModel}}"
                                            ItemsSource="{Binding ViewModel.FileNameCiphers, Mode=OneWay}"
                                            MinimumWidthRequest="110"
                                            SelectedItem="{Binding ViewModel.FileNameCipher, Mode=TwoWay}" />
                                    </uco:OptionsControl.Slot>
                                </uco:OptionsControl>
                                <uco:OptionsControl
                                    Title="{l:ResourceString Rid=NameEncoding}"
                                    IsSeparatorVisible="False"
                                    IsVisible="{Binding ViewModel.IsNameCipherEnabled, Mode=OneWay}">
                                    <uco:OptionsControl.Slot>
                                        <ucc:ModernPicker
                                            HorizontalTextAlignment="Center"
                                            IsTransparent="True"
                                            ItemDisplayBinding="{Binding Title, Mode=OneWay, x:DataType={x:Type vm2:PickerOptionViewModel}}"
                                            ItemsSource="{Binding ViewModel.EncodingOptions, Mode=OneWay}"
                                            MinimumWidthRequest="110"
                                            SelectedItem="{Binding ViewModel.EncodingOption, Mode=TwoWay}" />
                                    </uco:OptionsControl.Slot>
                                </uco:OptionsControl>
                            </VerticalStackLayout>
                        </uco:OptionsContainer.InnerContent>
                    </uco:OptionsContainer>
                </mtk:Expander.Content>
            </mtk:Expander>
        </VerticalStackLayout>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
