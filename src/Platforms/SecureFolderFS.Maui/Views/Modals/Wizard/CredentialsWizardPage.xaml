<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Wizard.CredentialsWizardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Wizard"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mic="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:ts="clr-namespace:SecureFolderFS.Maui.TemplateSelectors"
    xmlns:uc="clr-namespace:SecureFolderFS.Maui.UserControls"
    xmlns:vm="clr-namespace:SecureFolderFS.UI.ViewModels;assembly=SecureFolderFS.UI"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:CredentialsWizardPage"
    CloseCommand="{Binding OverlayViewModel.CancellationCommand, Mode=OneWay}"
    CloseEnabled="{Binding ViewModel.CanCancel, Mode=OneWay}"
    CloseText="{Binding OverlayViewModel.SecondaryButtonText, Mode=OneWay}"
    PrimaryCommand="{Binding OverlayViewModel.ContinuationCommand, Mode=OneWay}"
    PrimaryEnabled="{Binding ViewModel.CanContinue, Mode=OneWay}"
    PrimaryText="{Binding OverlayViewModel.PrimaryButtonText, Mode=OneWay}">

    <md:BaseModalPage.Resources>
        <!--  Password Template  -->
        <DataTemplate x:Key="PasswordTemplate" x:DataType="vm:PasswordCreationViewModel">
            <ContentView>
                <OnPlatform x:TypeArguments="View">
                    <On Platform="Android">
                        <VerticalStackLayout Spacing="16">
                            <VerticalStackLayout>
                                <Label HorizontalOptions="Fill" Text="{l:ResourceString Name=NewPassword}" />
                                <mdc:TextField
                                    HorizontalOptions="Fill"
                                    InputType="Password"
                                    LabelText="{l:ResourceString Name=Password}"
                                    SupportingText=""
                                    Text="{Binding PrimaryPassword, Mode=TwoWay}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout>
                                <Label HorizontalOptions="Fill" Text="{l:ResourceString Name=RepeatPassword}" />
                                <mdc:TextField
                                    HorizontalOptions="Fill"
                                    InputType="Password"
                                    LabelText="{l:ResourceString Name=Password}"
                                    SupportingText=""
                                    Text="{Binding SecondaryPassword, Mode=TwoWay}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </On>
                    <On Platform="iOS">
                        <VerticalStackLayout Spacing="16">
                            <VerticalStackLayout>
                                <Label Text="{l:ResourceString Name=NewPassword}" />
                                <Entry IsPassword="True" Text="{Binding PrimaryPassword, Mode=TwoWay}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout>
                                <Label Text="{l:ResourceString Name=RepeatPassword}" />
                                <Entry IsPassword="True" Text="{Binding SecondaryPassword, Mode=TwoWay}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </On>
                </OnPlatform>
            </ContentView>
        </DataTemplate>

        <!--  Key File Template  -->
        <DataTemplate x:Key="KeyFileTemplate" x:DataType="vm:KeyFileCreationViewModel">
            <ContentView>
                <OnPlatform x:TypeArguments="View">
                    <On Platform="Android">
                        <VerticalStackLayout Spacing="24">
                            <!--  Logo  -->
                            <mi:MauiIcon HorizontalOptions="Center" Icon="{mi:Material Key}" />

                            <!--  Title  -->
                            <Label
                                HorizontalOptions="Center"
                                Opacity="0.8"
                                Text="Setup Key File authentication" />

                            <!--  Authenticate  -->
                            <mdc:Button
                                Command="{Binding ProvideCredentialsCommand}"
                                HorizontalOptions="Center"
                                Text="Setup" />
                        </VerticalStackLayout>
                    </On>
                    <On Platform="iOS">
                        <VerticalStackLayout Spacing="24">
                            <!--  Logo  -->
                            <mi:MauiIcon HorizontalOptions="Center" Icon="{mic:Cupertino Doc}" />

                            <!--  Title  -->
                            <Label
                                HorizontalOptions="Center"
                                Opacity="0.8"
                                Text="Setup Key File authentication" />

                            <!--  Authenticate  -->
                            <Button
                                Command="{Binding ProvideCredentialsCommand}"
                                HorizontalOptions="Center"
                                Text="Setup" />
                        </VerticalStackLayout>
                    </On>
                </OnPlatform>
            </ContentView>
        </DataTemplate>
    </md:BaseModalPage.Resources>

    <md:BaseModalPage.ModalContent>
        <VerticalStackLayout Spacing="16">
            <Picker
                ItemDisplayBinding="{Binding DisplayName, Mode=OneWay}"
                ItemsSource="{Binding ViewModel.AuthenticationOptions}"
                SelectedItem="{Binding ViewModel.CurrentViewModel, Mode=TwoWay}" />

            <uc:ContentPresentation ViewContent="{Binding ViewModel.CurrentViewModel, Mode=OneWay}">
                <uc:ContentPresentation.TemplateSelector>
                    <ts:WizardAuthenticationTemplateSelector KeyFileTemplate="{StaticResource KeyFileTemplate}" PasswordTemplate="{StaticResource PasswordTemplate}" />
                </uc:ContentPresentation.TemplateSelector>
            </uc:ContentPresentation>
        </VerticalStackLayout>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
