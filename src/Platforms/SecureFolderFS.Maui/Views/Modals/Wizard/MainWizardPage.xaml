<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Wizard.MainWizardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Wizard"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:MainWizardPage"
    CloseCommand="{Binding OverlayViewModel.CancellationCommand, Mode=OneWay}"
    CloseText="{Binding OverlayViewModel.SecondaryText, Mode=OneWay}"
    Shell.PresentationMode="ModalAnimated">

    <md:BaseModalPage.ModalContent>
        <VerticalStackLayout Padding="16,0" Spacing="16">
            <Label
                FontSize="20"
                HorizontalOptions="Start"
                Text="Choose an option to add a new vault" />

            <OnPlatform x:TypeArguments="View">
                <On Platform="Android">
                    <VerticalStackLayout Spacing="4">
                        <Button
                            mi:MauiIcon.Value="{mi_material:Material Create}"
                            Clicked="Existing_Clicked"
                            ContentLayout="Top, 10"
                            FontSize="14"
                            HorizontalOptions="Fill"
                            Text="{l:ResourceString Rid=AddExisting}" />

                        <Button
                            mi:MauiIcon.Value="{mi_material:Material CreateNewFolder}"
                            Clicked="New_Clicked"
                            ContentLayout="Top, 10"
                            FontSize="14"
                            HorizontalOptions="Fill"
                            Text="{l:ResourceString Rid=CreateNew}" />
                    </VerticalStackLayout>
                </On>
                <On Platform="iOS">
                    <VerticalStackLayout Spacing="4">
                        <Button
                            mi:MauiIcon.Value="{mi_cupertino:Cupertino PlusCircle}"
                            Clicked="Existing_Clicked"
                            ContentLayout="Top, 10"
                            FontSize="14"
                            HorizontalOptions="Fill"
                            Text="{l:ResourceString Rid=AddExisting}" />

                        <Button
                            mi:MauiIcon.Value="{mi_cupertino:Cupertino Pencil}"
                            Clicked="New_Clicked"
                            ContentLayout="Top, 10"
                            FontSize="14"
                            HorizontalOptions="Fill"
                            Text="{l:ResourceString Rid=CreateNew}" />
                    </VerticalStackLayout>
                </On>
            </OnPlatform>
        </VerticalStackLayout>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
