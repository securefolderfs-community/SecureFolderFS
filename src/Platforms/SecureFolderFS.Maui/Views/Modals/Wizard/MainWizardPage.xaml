<md:BaseModalPage
    x:Class="SecureFolderFS.Maui.Views.Modals.Wizard.MainWizardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="using:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Modals.Wizard"
    xmlns:md="clr-namespace:SecureFolderFS.Maui.Views.Modals"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:mi_cupertino="clr-namespace:MauiIcons.Cupertino;assembly=MauiIcons.Cupertino"
    xmlns:mi_material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:MainWizardPage"
    CloseCommand="{Binding OverlayViewModel.CancellationCommand, Mode=OneWay}"
    CloseText="{Binding OverlayViewModel.SecondaryText, Mode=OneWay}"
    Shell.PresentationMode="ModalAnimated">

    <md:BaseModalPage.ModalContent>
        <VerticalStackLayout
            Margin="{OnPlatform iOS='0,16,0,0'}"
            Padding="16,0"
            Spacing="24">

            <Label
                FontSize="15"
                Opacity="0.55"
                Text="Choose an option to add a new vault" />

            <VerticalStackLayout Spacing="10">

                <!--  Add Existing  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryLightColor},
                                                      Dark={StaticResource SecondaryDarkColor}}"
                    HeightRequest="80"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Grid
                        Padding="20,0"
                        ColumnDefinitions="Auto,*,Auto"
                        ColumnSpacing="14">
                        <Border
                            Grid.Column="0"
                            Background="{StaticResource ThemePrimaryColorBrush}"
                            HeightRequest="40"
                            StrokeThickness="0"
                            WidthRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid>
                                <mi:MauiIcon
                                    HorizontalOptions="Center"
                                    Icon="{mi_material:Material Create}"
                                    IconColor="White"
                                    IconSize="20"
                                    OnPlatforms="Android"
                                    VerticalOptions="Center" />
                                <mi:MauiIcon
                                    HorizontalOptions="Center"
                                    Icon="{mi_cupertino:Cupertino PlusCircle}"
                                    IconColor="White"
                                    IconSize="20"
                                    OnPlatforms="iOS"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Border>
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{l:ResourceString Rid=AddExisting}"
                            TextColor="{AppThemeBinding Light={StaticResource QuarternaryLightColor},
                                                        Dark={StaticResource PrimaryDarkColor}}"
                            VerticalOptions="Center" />
                        <mi:MauiIcon
                            Grid.Column="2"
                            Icon="{mi_material:Material ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="18"
                            OnPlatforms="Android"
                            VerticalOptions="Center" />
                        <mi:MauiIcon
                            Grid.Column="2"
                            Icon="{mi_cupertino:Cupertino ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="18"
                            OnPlatforms="iOS"
                            VerticalOptions="Center" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Existing_Clicked" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>

                <!--  Create New  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryLightColor},
                                                      Dark={StaticResource SecondaryDarkColor}}"
                    HeightRequest="80"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Grid
                        Padding="20,0"
                        ColumnDefinitions="Auto,*,Auto"
                        ColumnSpacing="14">
                        <Border
                            Grid.Column="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryLightColor},
                                                              Dark={StaticResource PrimaryDarkColor}}"
                            HeightRequest="40"
                            StrokeThickness="0"
                            WidthRequest="40">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid>
                                <mi:MauiIcon
                                    HorizontalOptions="Center"
                                    Icon="{mi_material:Material CreateNewFolder}"
                                    IconColor="White"
                                    IconSize="20"
                                    OnPlatforms="Android"
                                    VerticalOptions="Center" />
                                <mi:MauiIcon
                                    HorizontalOptions="Center"
                                    Icon="{mi_cupertino:Cupertino Pencil}"
                                    IconColor="White"
                                    IconSize="20"
                                    OnPlatforms="iOS"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Border>
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{l:ResourceString Rid=CreateNew}"
                            TextColor="{AppThemeBinding Light={StaticResource QuarternaryLightColor},
                                                        Dark={StaticResource PrimaryDarkColor}}"
                            VerticalOptions="Center" />
                        <mi:MauiIcon
                            Grid.Column="2"
                            Icon="{mi_material:Material ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="18"
                            OnPlatforms="Android"
                            VerticalOptions="Center" />
                        <mi:MauiIcon
                            Grid.Column="2"
                            Icon="{mi_cupertino:Cupertino ChevronRight}"
                            IconColor="{AppThemeBinding Light={StaticResource TertiaryLightColor},
                                                        Dark={StaticResource TertiaryDarkColor}}"
                            IconSize="18"
                            OnPlatforms="iOS"
                            VerticalOptions="Center" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="New_Clicked" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </md:BaseModalPage.ModalContent>
</md:BaseModalPage>
