<ContentPage
    x:Class="SecureFolderFS.Maui.Views.Vault.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Vault"
    xmlns:uc="clr-namespace:SecureFolderFS.Maui.UserControls"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:OverviewPage">

    <VerticalStackLayout>
        <!--  Top widgets  -->
        <VerticalStackLayout Padding="20,16" Spacing="24">

            <!--  Health Widget  -->
            <HorizontalStackLayout Spacing="4">
                <Image
                    Margin="-4,0,0,0"
                    HeightRequest="48"
                    Source="green_shield.png" />
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="{l:ResourceString Name=HealthNoProblems}"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!--  Data statistics widget  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0">
                    <Label Opacity="0.6" Text="Total read" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        Text="0Mb" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Opacity="0.6" Text="Total write" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        Text="0Mb" />
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Quick actions">
                    <TextCell Command="{Binding ViewModel.VaultControlsViewModel.RevealFolderCommand}" Text="View in Files" />
                    <TextCell Command="{Binding ViewModel.VaultControlsViewModel.LockVaultCommand}" Text="{l:ResourceString Name=LockVault}" />
                </TableSection>
                <TableSection Title="Properties">
                    <uc:SplitCell
                        IsEnabled="False"
                        LeftText="Security"
                        RightText="{Binding PropertiesViewModel.SecurityText, Mode=OneWay}" />
                    <uc:SplitCell
                        IsEnabled="False"
                        LeftText="{l:ResourceString Name=DataEncryption}"
                        RightText="{Binding PropertiesViewModel.ContentCipherText, Mode=OneWay}" />
                    <uc:SplitCell
                        IsEnabled="False"
                        LeftText="{l:ResourceString Name=FileNameEncryption}"
                        RightText="{Binding PropertiesViewModel.FileNameCipherText, Mode=OneWay}" />
                </TableSection>
                <TableSection Title="Authentication">
                    <TextCell
                        Command="{Binding PropertiesViewModel.ChangeFirstAuthenticationCommand}"
                        Detail="Change how you log in into this vault"
                        Text="Change credentials" />
                    <TextCell
                        Command="{Binding PropertiesViewModel.ChangeSecondAuthenticationCommand}"
                        Detail="Setup or change two-factor authentication"
                        Text="Two-factor authentication" />
                    <TextCell Command="{Binding PropertiesViewModel.ViewRecoveryCommand}" Text="View recovery codes" />
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>
