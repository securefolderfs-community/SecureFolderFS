<ContentPage
    x:Class="SecureFolderFS.Maui.Views.Vault.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:SecureFolderFS.Maui.Localization"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Vault"
    xmlns:ts="clr-namespace:SecureFolderFS.Maui.TemplateSelectors"
    xmlns:uco="clr-namespace:SecureFolderFS.Maui.UserControls.Options"
    xmlns:ucw="clr-namespace:SecureFolderFS.Maui.UserControls.Widgets"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Widgets.Health;assembly=SecureFolderFS.Sdk"
    xmlns:vm2="clr-namespace:SecureFolderFS.Sdk.ViewModels.Controls.Widgets.Data;assembly=SecureFolderFS.Sdk"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:OverviewPage">

    <ContentPage.Resources>
        <!--  Health Widget  -->
        <DataTemplate x:Key="HealthWidgetTemplate" x:DataType="vm:HealthWidgetViewModel">
            <ucw:HealthWidget
                LastCheckedText="{Binding LastCheckedText, Mode=OneWay}"
                OpenVaultHealthCommand="{Binding OpenVaultHealthCommand, Mode=OneWay}"
                Severity="{Binding HealthViewModel.Severity, Mode=OneWay}"
                StatusTitle="{Binding HealthViewModel.Title, Mode=OneWay}" />
        </DataTemplate>

        <!--  Aggregated Data Statistics Widget  -->
        <DataTemplate x:Key="AggregatedDataWidgetTemplate" x:DataType="vm2:AggregatedDataWidgetViewModel">
            <ucw:AggregatedDataWidget TotalRead="{Binding TotalRead, Mode=OneWay}" TotalWrite="{Binding TotalWrite, Mode=OneWay}" />
        </DataTemplate>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Top widgets  -->
            <CollectionView
                Grid.Row="0"
                Margin="16,16"
                ItemsSource="{Binding OverviewViewModel.WidgetsViewModel.Widgets, Mode=OneWay}"
                VerticalScrollBarVisibility="Never">
                <CollectionView.ItemTemplate>
                    <ts:WidgetsTemplateSelector AggregatedDataWidgetTemplate="{StaticResource AggregatedDataWidgetTemplate}" HealthWidgetTemplate="{StaticResource HealthWidgetTemplate}" />
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="16" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
            </CollectionView>

            <!--  Top buttons  -->
            <Grid
                Grid.Row="1"
                Padding="16,16"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Command="{Binding OverviewViewModel.VaultControlsViewModel.RevealFolderCommand}"
                    HeightRequest="48"
                    Text="{l:ResourceString Rid=ViewInFiles}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding OverviewViewModel.VaultControlsViewModel.LockVaultCommand}"
                    HeightRequest="48"
                    Text="{l:ResourceString Rid=LockVault}" />
            </Grid>

            <!--  Options list  -->
            <VerticalStackLayout
                Grid.Row="2"
                Padding="16,0"
                Spacing="16">

                <!--  Quick Actions  -->
                <uco:OptionsContainer Title="{l:ResourceString Rid=QuickActions}">
                    <uco:OptionsContainer.InnerContent>
                        <VerticalStackLayout>
                            <uco:OptionsControl Title="{l:ResourceString Rid=OpenFileBrowser}" Command="{Binding OverviewViewModel.VaultControlsViewModel.BrowseCommand}" />
                            <uco:OptionsControl
                                Title="{l:ResourceString Rid=OpenRecycleBin}"
                                Command="{Binding PropertiesViewModel.ViewRecycleBinCommand}"
                                IsSeparatorVisible="False" />
                        </VerticalStackLayout>
                    </uco:OptionsContainer.InnerContent>
                </uco:OptionsContainer>

                <!--  Vault Properties  -->
                <uco:OptionsContainer Title="{l:ResourceString Rid=VaultProperties}">
                    <uco:OptionsContainer.InnerContent>
                        <VerticalStackLayout>
                            <uco:OptionsControl Title="{l:ResourceString Rid=Security}" SlotText="{Binding PropertiesViewModel.SecurityText, Mode=OneWay}" />
                            <uco:OptionsControl Title="{l:ResourceString Rid=DataEncryption}" SlotText="{Binding PropertiesViewModel.ContentCipherText, Mode=OneWay}" />
                            <uco:OptionsControl
                                Title="{l:ResourceString Rid=NameEncryption}"
                                IsSeparatorVisible="False"
                                SlotText="{Binding PropertiesViewModel.FileNameCipherText, Mode=OneWay}" />
                        </VerticalStackLayout>
                    </uco:OptionsContainer.InnerContent>
                </uco:OptionsContainer>

                <!--  Authentication  -->
                <uco:OptionsContainer Title="{l:ResourceString Rid=Authentication}">
                    <uco:OptionsContainer.InnerContent>
                        <VerticalStackLayout>
                            <uco:OptionsControl Title="{l:ResourceString Rid=ChangeCredentials}" Command="{Binding PropertiesViewModel.ChangeFirstAuthenticationCommand}" />
                            <uco:OptionsControl Title="{l:ResourceString Rid=TwoFactor}" Command="{Binding PropertiesViewModel.ChangeSecondAuthenticationCommand}" />
                            <uco:OptionsControl
                                Title="{l:ResourceString Rid=RecoveryCodes}"
                                Command="{Binding PropertiesViewModel.ViewRecoveryCommand}"
                                IsSeparatorVisible="False" />
                        </VerticalStackLayout>
                    </uco:OptionsContainer.InnerContent>
                </uco:OptionsContainer>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
