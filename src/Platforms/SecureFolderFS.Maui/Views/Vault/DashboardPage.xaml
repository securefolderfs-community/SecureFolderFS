<ContentPage
    x:Class="SecureFolderFS.Maui.Views.Vault.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SecureFolderFS.Maui.Views.Vault"
    xmlns:nv="clr-namespace:SecureFolderFS.Maui.UserControls.Navigation"
    xmlns:ts="clr-namespace:SecureFolderFS.Maui.TemplateSelectors"
    xmlns:vm="clr-namespace:SecureFolderFS.Sdk.ViewModels.Views.Vault.Dashboard;assembly=SecureFolderFS.Sdk"
    xmlns:vw="clr-namespace:SecureFolderFS.Maui.Views.Vault"
    Title="{Binding ViewModel.Title, Mode=OneWay}"
    x:DataType="local:DashboardPage">

    <ContentPage.Resources>
        <DataTemplate x:Key="OverviewTemplate" x:DataType="vm:VaultOverviewPageViewModel">
            <!--  Grid is needed here since ContentPresentation casts to View  -->
            <Grid>
                <vw:OverviewPage ViewModel="{Binding}" />
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <nv:VaultDashboardNavigationControl x:Name="DashboardNavigation">
        <nv:VaultDashboardNavigationControl.TemplateSelector>
            <ts:VaultDashboardTemplateSelector OverviewTemplate="{StaticResource OverviewTemplate}" />
        </nv:VaultDashboardNavigationControl.TemplateSelector>
    </nv:VaultDashboardNavigationControl>
</ContentPage>
