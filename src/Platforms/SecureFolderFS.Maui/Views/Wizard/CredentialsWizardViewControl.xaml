        <FontIcon
          HorizontalAlignment="Center"
          FontSize="24"
          Glyph="&#xE8D7;" />

        -->
        <!--  Title  -->
        <!--
        <TextBlock
          HorizontalAlignment="Center"
          Opacity="0.8"
          Text="Setup Key File authentication" />

        -->
