<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.InterfaceRoot.DebugWindowRootControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            PaneDisplayMode="Top"
            SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItems>

                <!--  App Control  -->
                <NavigationViewItem
                    Content="App Control"
                    IsSelected="True"
                    Tag="0">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE12A;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!--  File System Log  -->
                <NavigationViewItem Content="File System Log" Tag="1">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEADF;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!--  Display frame  -->
            <ScrollViewer Width="644">
                <Frame x:Name="Navigation" />
            </ScrollViewer>
        </NavigationView>
    </Border>
</UserControl>
