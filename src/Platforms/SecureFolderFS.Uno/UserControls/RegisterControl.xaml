<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.RegisterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:local="using:SecureFolderFS.Uno.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ts="using:SecureFolderFS.Uno.TemplateSelectors"
    xmlns:vc="using:SecureFolderFS.Uno.ValueConverters"
    xmlns:vm3="using:SecureFolderFS.UI.ViewModels.Authentication"
    xmlns:vm4="using:SecureFolderFS.Uno.ViewModels"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    x:Name="RootControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <vc:PasswordToStrengthConverter x:Key="PasswordToStrengthConverter" />

        <!--  Password Template  -->
        <DataTemplate x:Key="PasswordTemplate" x:DataType="vm3:PasswordCreationViewModel">
            <StackPanel Spacing="16">
                <StackPanel>
                    <local:PasswordControl Title="{l:ResourceString Rid=NewPassword}" UnsecurePassword="{x:Bind PrimaryPassword, Mode=TwoWay}" />
                    <ProgressBar Background="Transparent" Value="{x:Bind PrimaryPassword, Mode=OneWay, Converter={StaticResource PasswordToStrengthConverter}}" />
                </StackPanel>
                <local:PasswordControl Title="{l:ResourceString Rid=RepeatPassword}" UnsecurePassword="{x:Bind SecondaryPassword, Mode=TwoWay}" />
            </StackPanel>
        </DataTemplate>

        <!--  Key File Template  -->
        <DataTemplate x:Key="KeyFileTemplate" x:DataType="vm3:KeyFileCreationViewModel">
            <StackPanel Spacing="24">
                <!--  Logo  -->
                <FontIcon
                    HorizontalAlignment="Center"
                    FontSize="24"
                    Glyph="&#xE8D7;" />

                <!--  Title  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    Opacity="0.8"
                    Text="{l:ResourceString Rid=SetupKeyFile}" />

                <!--  Authenticate  -->
                <Button
                    Padding="24,6"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ProvideCredentialsCommand, Mode=OneWay}"
                    Content="{l:ResourceString Rid=Setup}"
                    Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
        </DataTemplate>

        <!--  Windows Hello Template  -->
        <win:DataTemplate x:Key="WindowsHelloTemplate" x:DataType="vm4:WindowsHelloCreationViewModel">
            <StackPanel Spacing="24">
                <!--  Logo  -->
                <FontIcon
                    HorizontalAlignment="Center"
                    FontSize="38"
                    Glyph="&#xEB68;" />

                <!--  Title  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    Opacity="0.8"
                    Text="{l:ResourceString Rid=SetupWindowsHello}" />

                <!--  Authenticate  -->
                <Button
                    Padding="24,6"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ProvideCredentialsCommand, Mode=OneWay}"
                    Content="{l:ResourceString Rid=Setup}"
                    Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
        </win:DataTemplate>
    </UserControl.Resources>

    <ContentControl HorizontalContentAlignment="Stretch" Content="{x:Bind CurrentViewModel, Mode=OneWay}">
        <ContentControl.ContentTemplateSelector>
            <ts:RegistrationTemplateSelector
                KeyFileTemplate="{StaticResource KeyFileTemplate}"
                PasswordTemplate="{StaticResource PasswordTemplate}"
                WindowsHelloTemplate="{StaticResource WindowsHelloTemplate}" />
        </ContentControl.ContentTemplateSelector>
    </ContentControl>
</UserControl>
