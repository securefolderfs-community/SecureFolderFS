<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.BackButtonTitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animvis="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:not_win="http://uno.ui/skia"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d not_win">

    <UserControl.Resources>
        <Storyboard x:Key="HideBackButtonStoryboard" x:Name="HideBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.2" />
            <DoubleAnimation
                BeginTime="0:0:0.05"
                Storyboard.TargetName="TitleText"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="0"
                To="-48"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ShowBackButtonStoryboard" x:Name="ShowBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
            <DoubleAnimation
                Storyboard.TargetName="TitleText"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="-48"
                To="0"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Button
            x:Name="GoBack"
            Width="32"
            Height="32"
            Margin="0,0,16,0"
            Padding="4"
            AutomationProperties.Name="{l:ResourceString Rid=Back}"
            Background="Transparent"
            BorderThickness="0"
            Click="GoBack_Click"
            Visibility="Collapsed">
            <Grid>
                <win:AnimatedIcon>
                    <AnimatedIcon.Source>
                        <animvis:AnimatedBackVisualSource />
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <SymbolIconSource Symbol="Back" />
                    </AnimatedIcon.FallbackIconSource>
                </win:AnimatedIcon>
                <not_win:FontIcon FontSize="16" Glyph="&#xE72B;" />
            </Grid>
        </Button>
        <TextBlock
            x:Name="TitleText"
            FontSize="22"
            FontWeight="SemiBold"
            Text="{x:Bind Title, Mode=OneWay}">
            <TextBlock.RenderTransform>
                <TranslateTransform />
            </TextBlock.RenderTransform>
        </TextBlock>
    </StackPanel>
</UserControl>
