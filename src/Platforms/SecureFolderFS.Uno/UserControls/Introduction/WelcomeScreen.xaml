<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.Introduction.WelcomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Width="56"
            Height="56"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Source="ms-appx://SecureFolderFS.UI/Assets/AppAssets/app_icon.png" />

        <StackPanel Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="{l:ResourceString Rid=WelcomeTo,
                                        Converter={StaticResource StringInterpolationConverter},
                                        ConverterParameter='none|SecureFolderFS'}" />

            <TextBlock
                Padding="80,0"
                FontSize="14"
                Opacity="0.8"
                Text="{l:ResourceString Rid=OnboardingWelcomeSubtitle}"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />
        </StackPanel>

        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            FontSize="12"
            Opacity="0.8"
            TextAlignment="Center"
            TextWrapping="Wrap">
            By continuing, you agree to our&#x0020;<Hyperlink NavigateUri="https://github.com/securefolderfs-community/SecureFolderFS/blob/master/PRIVACY.md">Privacy Policy</Hyperlink>
            &#x0020;and&#x0020;<Hyperlink>Terms of Service</Hyperlink></TextBlock>
    </Grid>
</UserControl>
