<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.Introduction.EndScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <FontIcon
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="48"
            Foreground="{ThemeResource SystemAccentColor}"
            Glyph="&#xE73E;" />

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="25"
            FontWeight="Bold"
            Text="{l:ResourceString Rid=OnboardingEndTitle}" />

        <TextBlock
            Grid.Row="2"
            Padding="80,0,80,0"
            FontSize="14"
            Text="You're now ready to use SecureFolderFS! You can customize your app experience by heading to Settings."
            TextAlignment="Center"
            TextWrapping="WrapWholeWords" />
    </Grid>
</UserControl>
