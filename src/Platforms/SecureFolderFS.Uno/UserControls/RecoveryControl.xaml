<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.RecoveryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel Spacing="8">
        <TextBlock Text="{l:ResourceString Rid=EnterRecoveryKey}" />
        <TextBox
            AcceptsReturn="True"
            FontFamily="Consolas"
            Text="{x:Bind RecoveryKey, Mode=TwoWay}"
            TextWrapping="Wrap" />

        <Button HorizontalAlignment="Right" Command="{x:Bind PasteRecoveryKeyCommand, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,0,0,-4"
                    FontSize="16"
                    Glyph="&#xE77F;" />
                <TextBlock Text="{l:ResourceString Rid=Paste}" />
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
