<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.Widgets.AggregatedDataWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="HealthControl"
    mc:Ignorable="d">

    <Grid ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Opacity="0.6" Text="{l:ResourceString Rid=TotalRead}" />
            <TextBlock
                FontSize="22"
                FontWeight="SemiBold"
                Text="{x:Bind TotalRead, Mode=OneWay}" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Opacity="0.6" Text="{l:ResourceString Rid=TotalWrite}" />
            <TextBlock
                FontSize="22"
                FontWeight="SemiBold"
                Text="{x:Bind TotalWrite, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</UserControl>
