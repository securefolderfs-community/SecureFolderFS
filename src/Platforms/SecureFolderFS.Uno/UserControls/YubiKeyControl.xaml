<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.YubiKeyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:not_win="http://uno.ui/not_win"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d not_win">

    <UserControl.Resources>
        <Storyboard
            x:Key="YubiKeyBlinkStoryboard"
            x:Name="YubiKeyBlinkStoryboard"
            RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="YubiKeyLight" Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1" />
                <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="0.4" />
                <LinearDoubleKeyFrame KeyTime="0:0:2.0" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid>
            <win:Image
                Height="132"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="ms-appx://SecureFolderFS.UI/Assets/AppAssets/yubikey.png" />
            <not_win:Image
                Height="132"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/AppAssets/yubikey.png" />
        </Grid>

        <Rectangle
            x:Name="YubiKeyLight"
            Width="40"
            Height="40"
            Margin="0,-16,0,0"
            Loaded="YubiKeyLight_Loaded"
            Visibility="Collapsed">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0.2" Color="Lime" />
                    <GradientStop Offset="1" Color="Transparent" />
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
