<UserControl
    x:Class="SecureFolderFS.Uno.UserControls.TitleBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Height="32"
        Padding="16,6"
        Canvas.ZIndex="10"
        IsHitTestVisible="True"
        IsTabStop="False">

        <StackPanel
            x:Name="TitlePanel"
            HorizontalAlignment="Left"
            x:FieldModifier="public"
            Orientation="Horizontal"
            Spacing="6">

            <TextBlock
                VerticalAlignment="Center"
                FontSize="12"
                Text="{x:Bind PrimaryTitle, Mode=OneWay}" />
            <TextBlock
                x:Name="SecondaryTitleText"
                Margin="0,0,0,2"
                VerticalAlignment="Bottom"
                x:Load="{x:Bind SecondaryTitle, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                CharacterSpacing="32"
                FontSize="9"
                FontWeight="Thin"
                Opacity="0.8"
                Text="{x:Bind SecondaryTitle, Mode=OneWay}" />
        </StackPanel>
    </Border>
</UserControl>
