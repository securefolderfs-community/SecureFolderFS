<Page
    x:Class="SecureFolderFS.Uno.Views.PrintPages.RecoveryKeyPrintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Padding="48,32"
        Background="White"
        RowSpacing="40">
        <Grid.RowDefinitions>
            <!--  Header  -->
            <RowDefinition Height="Auto" />
            <!--  Content  -->
            <RowDefinition Height="Auto" />
            <!--  Caution  -->
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="16">
                <Image
                    Height="52"
                    VerticalAlignment="Center"
                    Source="ms-appx://SecureFolderFS.UI/Assets/AppAssets/AppIcon.png" />

                <Image
                    Height="29"
                    Margin="0,0,0,-3"
                    VerticalAlignment="Center"
                    Source="ms-appx://SecureFolderFS.UI/Assets/AppAssets/AppTitle.png" />

            </StackPanel>

            <!--  RecoveryKey document version  -->
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Foreground="Gray"
                Text="M1" />
        </Grid>

        <!--  Content  -->
        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock
                x:Name="RecoveryKeyVaultNameText"
                x:FieldModifier="public"
                FontSize="22"
                FontWeight="Medium"
                Foreground="#202020"
                Text="RECOVERY KEY FOR VAULT TEXT" />

            <StackPanel Spacing="2">
                <Border
                    MinHeight="64"
                    Padding="8"
                    Background="#DFDFDF"
                    CornerRadius="4">
                    <TextBlock
                        x:Name="RecoveryKeyText"
                        x:FieldModifier="public"
                        FontFamily="Consolas"
                        FontSize="16"
                        Foreground="Black"
                        Text="RECOVERY KEY TEXT"
                        TextWrapping="Wrap" />
                </Border>
                <Grid>
                    <TextBlock
                        x:Name="VaultGuidText"
                        x:FieldModifier="public"
                        FontSize="12"
                        Foreground="Gray"
                        Text="GUID TEXT" />
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="12"
                        Foreground="Gray"
                        Text="Secret. Do not share" />
                </Grid>
            </StackPanel>
        </StackPanel>

        <!--  Caution  -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <!--  Warning bar  -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Rectangle
                    Width="3"
                    Height="32"
                    Margin="0,0,8,0"
                    Fill="#DFDFDF" />
                <FontIcon
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#DAA520"
                    Glyph="&#xE7BA;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#DAA520"
                    Text="Warning!" />
            </StackPanel>

            <!--  Info  -->
            <TextBlock
                FontSize="14"
                Foreground="Black"
                Text="This is the recovery key which you can use to regain access to this vault. Losing it will prevent you from resetting your credentials."
                TextWrapping="WrapWholeWords" />
        </StackPanel>
    </Grid>
</Page>
