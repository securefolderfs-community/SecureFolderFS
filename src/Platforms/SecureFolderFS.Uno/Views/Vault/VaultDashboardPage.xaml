<Page
    x:Class="SecureFolderFS.Uno.Views.Vault.VaultDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animvis="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nv="using:SecureFolderFS.Uno.UserControls.Navigation"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Key="HideBackButtonStoryboard" x:Name="HideBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.2" />
            <DoubleAnimation
                BeginTime="0:0:0.05"
                Storyboard.TargetName="PageTitle"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="0"
                To="-48"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ShowBackButtonStoryboard" x:Name="ShowBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
            <DoubleAnimation
                Storyboard.TargetName="PageTitle"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="-48"
                To="0"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ShowEmbedStoryboard" x:Name="ShowEmbedStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="EmbeddedContentControl"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="HideEmbedStoryboard" x:Name="HideEmbedStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="EmbeddedContentControl"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </Page.Resources>

    <Grid
        MaxWidth="960"
        Padding="32,16"
        RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Navigation  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Back button  -->
            <Button
                x:Name="GoBack"
                Grid.Column="0"
                Width="32"
                Height="32"
                Margin="0,0,16,0"
                Padding="8"
                AutomationProperties.Name="{l:ResourceString Rid=Back}"
                Background="Transparent"
                BorderThickness="0"
                Command="{x:Bind ViewModel.GoBackCommand, Mode=OneWay}">
                <AnimatedIcon>
                    <AnimatedIcon.Source>
                        <animvis:AnimatedBackVisualSource />
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <SymbolIconSource Symbol="Back" />
                    </AnimatedIcon.FallbackIconSource>
                </AnimatedIcon>
            </Button>

            <!--  Current page text  -->
            <TextBlock
                x:Name="PageTitle"
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="26"
                FontWeight="SemiBold"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}">
                <TextBlock.RenderTransform>
                    <TranslateTransform />
                </TextBlock.RenderTransform>
            </TextBlock>

            <!--  Embedded Content  -->
            <ContentControl
                x:Name="EmbeddedContentControl"
                Grid.Column="2"
                VerticalAlignment="Center" />
        </Grid>

        <!--  Content  -->
        <nv:VaultDashboardNavigationControl
            x:Name="Navigation"
            Grid.Row="1"
            Loaded="Navigation_Loaded" />
    </Grid>
</Page>
