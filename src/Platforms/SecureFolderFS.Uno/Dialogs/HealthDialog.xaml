<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.HealthDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls.Widgets.Categories"
    Title="Found issues"
    DefaultButton="Primary"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    SecondaryButtonText="{l:ResourceString Rid=Close}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <Grid>
        <!--<StackPanel Spacing="32">
            <TextBlock Text="No issues found" />
        </StackPanel>-->

        <ListView
            Width="464"
            IsItemClickEnabled="False"
            ItemsSource="{x:Bind ViewModel.FoundIssues, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:HealthIssueViewModel">
                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            FontSize="24"
                            Glyph="&#xE8AC;" />

                        <StackPanel Grid.Column="1">
                            <TextBlock FontWeight="Semibold" Text="Broken file name" />
                            <TextBlock Opacity="0.8" Text="Export under a new name" />
                        </StackPanel>

                        <Button Grid.Column="2" Content="Resolve" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
