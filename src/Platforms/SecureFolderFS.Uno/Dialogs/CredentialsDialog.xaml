<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.CredentialsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ts="using:SecureFolderFS.Uno.TemplateSelectors"
    xmlns:uc="using:SecureFolderFS.Uno.UserControls"
    xmlns:ucab="using:SecureFolderFS.Uno.UserControls.ActionBlocks"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls"
    xmlns:vm2="using:SecureFolderFS.Sdk.ViewModels.Controls.Authentication"
    Title="{x:Bind ViewModel.Title, Mode=OneWay}"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    CloseButtonText="{l:ResourceString Name=Close}"
    Closing="ContentDialog_Closing"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="{x:Bind ViewModel.PrimaryButtonText, Mode=OneWay}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <DataTemplate x:Key="LoginTemplate" x:DataType="vm:LoginViewModel">
            <StackPanel Spacing="8">
                <uc:LoginControl CurrentViewModel="{x:Bind CurrentViewModel, Mode=OneWay}" ProvideContinuationButton="False" />
                <HyperlinkButton
                    Padding="4,2"
                    HorizontalAlignment="Center"
                    Click="RecoverLink_Click"
                    Content="Use Master key">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <StackPanel Width="400" Spacing="8">
                                <TextBlock Text="Enter the Master key for this vault" />
                                <TextBox
                                    x:Name="MasterKeyText"
                                    AcceptsReturn="True"
                                    FontFamily="Consolas"
                                    TextWrapping="Wrap" />
                                <Button
                                    HorizontalAlignment="Right"
                                    Command="{x:Bind RecoverAccessCommand, Mode=OneWay}"
                                    CommandParameter="{Binding Text, ElementName=MasterKeyText, Mode=OneWay}"
                                    Content="{l:ResourceString Name=RecoverAccess}" />
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </HyperlinkButton>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="SelectionTemplate" x:DataType="vm:CredentialsViewModel">
            <StackPanel Spacing="16">
                <StackPanel Spacing="4">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderStyle}" Text="Modify existing" />
                    <ucab:ActionBlockControl Title="{x:Bind OriginalViewModel.DisplayName, Mode=OneWay}" Description="Change current authentication method" />
                    <!--  TODO: This should only be available on non-first stage authentication methods  -->
                    <ucab:ActionBlockControl Title="Remove authentication" Description="Remove this authentication method">
                        <ucab:ActionBlockControl.Icon>
                            <FontIcon Glyph="&#xE738;" />
                        </ucab:ActionBlockControl.Icon>
                    </ucab:ActionBlockControl>
                </StackPanel>
                <StackPanel Spacing="4">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderStyle}" Text="Other options" />
                    <ItemsRepeater ItemsSource="{x:Bind AuthenticationOptions, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="vm2:AuthenticationViewModel">
                                <ucab:ActionBlockControl Title="{x:Bind DisplayName, Mode=OneWay}" Description="{x:Bind Description, Mode=OneWay}" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.Resources>

    <ContentControl
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        Content="{x:Bind ViewModel.CurrentViewModel, Mode=OneWay}"
        IsTabStop="False">
        <ContentControl.ContentTemplateSelector>
            <ts:CredentialsTemplateSelector LoginTemplate="{StaticResource LoginTemplate}" SelectionTemplate="{StaticResource SelectionTemplate}" />
        </ContentControl.ContentTemplateSelector>
        <ContentControl.ContentTransitions>
            <TransitionCollection>
                <PopupThemeTransition />
            </TransitionCollection>
        </ContentControl.ContentTransitions>
    </ContentControl>
</ContentDialog>
