<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.CredentialsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animvis="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ts="using:SecureFolderFS.Uno.TemplateSelectors"
    xmlns:uc="using:SecureFolderFS.Uno.UserControls"
    xmlns:ucab="using:SecureFolderFS.Uno.UserControls.ActionBlocks"
    xmlns:vc="using:SecureFolderFS.Uno.ValueConverters"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls"
    xmlns:vm2="using:SecureFolderFS.Sdk.ViewModels.Controls.Authentication"
    xmlns:vm3="using:SecureFolderFS.Sdk.ViewModels.Views.Credentials"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    CloseButtonText="{l:ResourceString Name=Close}"
    Closed="CredentialsDialog_Closed"
    Closing="ContentDialog_Closing"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="{x:Bind ViewModel.PrimaryButtonText, Mode=OneWay}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <vc:NullToBoolConverter x:Key="NullToBoolConverter" />
        <vc:BoolInvertConverter x:Key="BoolInvertConverter" />

        <DataTemplate x:Key="LoginTemplate" x:DataType="vm:LoginViewModel">
            <StackPanel Spacing="8">
                <uc:LoginControl CurrentViewModel="{x:Bind CurrentViewModel, Mode=OneWay}" ProvideContinuationButton="False" />
                <HyperlinkButton
                    Padding="4,2"
                    HorizontalAlignment="Center"
                    Click="RecoverLink_Click"
                    Content="Use Master key">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <StackPanel Width="400" Spacing="8">
                                <TextBlock Text="Enter the Master key for this vault" />
                                <TextBox
                                    x:Name="MasterKeyText"
                                    AcceptsReturn="True"
                                    FontFamily="Consolas"
                                    TextWrapping="Wrap" />
                                <Button
                                    HorizontalAlignment="Right"
                                    Command="{x:Bind RecoverAccessCommand, Mode=OneWay}"
                                    CommandParameter="{Binding Text, ElementName=MasterKeyText, Mode=OneWay}"
                                    Content="{l:ResourceString Name=RecoverAccess}" />
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </HyperlinkButton>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ConfirmationTemplate" x:DataType="vm3:CredentialsConfirmationViewModel">
            <Grid>
                <StackPanel
                    x:Name="CredentialsSetupPanel"
                    x:Load="{x:Bind IsRemoving, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}"
                    Spacing="8">
                    <uc:RegisterControl CurrentViewModel="{x:Bind SelectedViewModel, Mode=OneWay}" />
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <CheckBox Content="Use as substitute" />
                        <HyperlinkButton Content="Learn more" />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    x:Name="CredentialsRemovalPanel"
                    x:Load="{x:Bind IsRemoving, Mode=OneWay}"
                    Spacing="8">
                    <TextBlock Text="The following authentication method will be removed. Do you wish to continue?" />
                    <ucab:ActionBlockControl
                        Title="{x:Bind SelectedViewModel.DisplayName, Mode=OneWay}"
                        BlockMode="Default"
                        Description="{x:Bind SelectedViewModel.Description, Mode=OneWay}">
                        <ucab:ActionBlockControl.Icon>
                            <FontIcon Glyph="{x:Bind SelectedViewModel.Icon, Mode=OneWay}" />
                        </ucab:ActionBlockControl.Icon>
                    </ucab:ActionBlockControl>
                    <TextBlock Opacity="0.8" Text="You can always re-add it later" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="SelectionTemplate" x:DataType="vm3:CredentialsSelectionViewModel">
            <StackPanel Spacing="16">
                <StackPanel
                    x:Name="ExistingOptions"
                    x:Load="{x:Bind CurrentViewModel, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                    Spacing="4">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderStyle}" Text="Modify existing" />
                    <ucab:ActionBlockControl
                        Title="{x:Bind CurrentViewModel.DisplayName, Mode=OneWay}"
                        BlockMode="Clickable"
                        Description="Change current authentication method">
                        <ucab:ActionBlockControl.Icon>
                            <FontIcon Glyph="{x:Bind CurrentViewModel.Icon, Mode=OneWay}" />
                        </ucab:ActionBlockControl.Icon>
                    </ucab:ActionBlockControl>
                    <ucab:ActionBlockControl
                        x:Name="RemoveAuthentication"
                        Title="Remove authentication"
                        x:Load="{x:Bind CanRemoveCredentials, Mode=OneWay}"
                        BlockMode="Clickable"
                        ClickCommand="{x:Bind RemoveCredentialsCommand, Mode=OneWay}"
                        Description="Remove this authentication method">
                        <ucab:ActionBlockControl.Icon>
                            <FontIcon Glyph="&#xE738;" />
                        </ucab:ActionBlockControl.Icon>
                    </ucab:ActionBlockControl>
                </StackPanel>
                <StackPanel Spacing="4">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderStyle}" Text="All options" />
                    <ListView
                        Margin="0"
                        Padding="0"
                        IsItemClickEnabled="True"
                        ItemClick="ListView_ItemClick"
                        ItemsSource="{x:Bind AuthenticationOptions, Mode=OneWay}"
                        SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm2:AuthenticationViewModel">
                                <ucab:ActionBlockControl
                                    Title="{x:Bind DisplayName, Mode=OneWay}"
                                    BlockMode="Default"
                                    DataContext="{Binding}"
                                    Description="{x:Bind Description, Mode=OneWay}">
                                    <ucab:ActionBlockControl.Icon>
                                        <FontIcon Glyph="{x:Bind Icon, Mode=OneWay}" />
                                    </ucab:ActionBlockControl.Icon>
                                </ucab:ActionBlockControl>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Margin" Value="-4,0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <Storyboard x:Key="HideBackButtonStoryboard" x:Name="HideBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.2" />
            <DoubleAnimation
                BeginTime="0:0:0.05"
                Storyboard.TargetName="TitleText"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="0"
                To="-48"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ShowBackButtonStoryboard" x:Name="ShowBackButtonStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="GoBack"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
            <DoubleAnimation
                Storyboard.TargetName="TitleText"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                From="-48"
                To="0"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </ContentDialog.Resources>

    <ContentDialog.Title>
        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
            <Button
                x:Name="GoBack"
                Width="32"
                Height="32"
                Margin="0,0,16,0"
                Padding="8"
                AutomationProperties.Name="{l:ResourceString Name=Back}"
                Background="Transparent"
                BorderThickness="0"
                Click="GoBack_Click"
                Visibility="Collapsed">
                <AnimatedIcon>
                    <AnimatedIcon.Source>
                        <animvis:AnimatedBackVisualSource />
                    </AnimatedIcon.Source>
                    <AnimatedIcon.FallbackIconSource>
                        <SymbolIconSource Symbol="Back" />
                    </AnimatedIcon.FallbackIconSource>
                </AnimatedIcon>
            </Button>
            <TextBlock
                x:Name="TitleText"
                FontSize="22"
                FontWeight="SemiBold"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}">
                <TextBlock.RenderTransform>
                    <TranslateTransform />
                </TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>
    </ContentDialog.Title>

    <ContentControl
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        Content="{x:Bind ViewModel.SelectedViewModel, Mode=OneWay}"
        IsTabStop="False">
        <ContentControl.ContentTemplateSelector>
            <ts:CredentialsTemplateSelector
                ConfirmationTemaplte="{StaticResource ConfirmationTemplate}"
                LoginTemplate="{StaticResource LoginTemplate}"
                SelectionTemplate="{StaticResource SelectionTemplate}" />
        </ContentControl.ContentTemplateSelector>
        <ContentControl.ContentTransitions>
            <TransitionCollection>
                <PopupThemeTransition />
            </TransitionCollection>
        </ContentControl.ContentTransitions>
    </ContentControl>
</ContentDialog>
