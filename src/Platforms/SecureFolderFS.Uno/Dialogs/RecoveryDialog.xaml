<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.RecoveryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{l:ResourceString Rid=RecoverAccess}"
    Width="600"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    CloseButtonText="{l:ResourceString Rid=Cancel}"
    DefaultButton="Primary"
    PrimaryButtonClick="RecoveryDialog_PrimaryButtonClick"
    PrimaryButtonText="{l:ResourceString Rid=Recover}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">500</x:Double>
        <x:Double x:Key="ContentDialogMinWidth">500</x:Double>
    </ContentDialog.Resources>

    <StackPanel Spacing="8">
        <TextBlock Text="{l:ResourceString Rid=EnterRecoveryKey}" />
        <TextBox
            AcceptsReturn="True"
            FontFamily="Consolas"
            Text="{x:Bind ViewModel.RecoveryKey, Mode=TwoWay}"
            TextWrapping="Wrap" />

        <Button HorizontalAlignment="Right" Command="{x:Bind ViewModel.PasteRecoveryKeyCommand, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    Margin="0,0,0,-4"
                    FontSize="16"
                    Glyph="&#xE77F;" />
                <TextBlock Text="{l:ResourceString Rid=Paste}" />
            </StackPanel>
        </Button>
    </StackPanel>
</ContentDialog>
