<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.RecycleBinDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tbv="using:WinUI.TableView"
    xmlns:ucab="using:SecureFolderFS.Uno.UserControls.ActionBlocks"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls.Components"
    Title="{l:ResourceString Rid=RecycleBin}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    SecondaryButtonText="{l:ResourceString Rid=Close}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMinWidth">900</x:Double>
    </ContentDialog.Resources>

    <Grid RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ucab:ActionBlockControl
            x:Name="RecycleBinActionBlock"
            Title="{l:ResourceString Rid=EnableRecycleBin}"
            Grid.Row="0"
            BlockMode="Expandable">
            <ucab:ActionBlockControl.ActionElement>
                <ToggleSwitch
                    MinWidth="0"
                    IsOn="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}"
                    Toggled="ToggleSwitch_Toggled" />
            </ucab:ActionBlockControl.ActionElement>
            <ucab:ActionBlockControl.Icon>
                <FontIcon Glyph="&#xE74D;" />
            </ucab:ActionBlockControl.Icon>
            <ucab:ActionBlockControl.ExpanderContent>
                <Grid Margin="0,-8" Padding="52,0,32,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{l:ResourceString Rid=MaximumSize}" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}"
                        ItemsSource="{x:Bind ViewModel.SizeOptions, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.CurrentSizeOption, Mode=TwoWay}"
                        SelectionChanged="SizeOptions_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:PickerOptionViewModel">
                                <TextBlock Text="{x:Bind Title, Mode=OneWay}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,12,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                    <ProgressRing
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="32"
                        Height="32"
                        Margin="0,12,0,0"
                        VerticalAlignment="Center"
                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                        IsIndeterminate="False"
                        Visibility="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                        Value="{x:Bind ViewModel.PercentageTaken, Mode=OneWay}" />
                </Grid>
            </ucab:ActionBlockControl.ExpanderContent>
        </ucab:ActionBlockControl>

        <Grid
            x:Name="RecycleBinContentsView"
            Grid.Row="1"
            x:Load="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}">
            <Grid
                x:Name="EmptyView"
                Padding="0,8,0,16"
                x:Load="{x:Bind ViewModel.Items.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}, ConverterParameter='invert'}">
                <TextBlock
                    HorizontalAlignment="Center"
                    Opacity="0.8"
                    Text="{l:ResourceString Rid=EmptyRecycleBinDescription}" />
            </Grid>

            <Grid
                x:Name="ItemsView"
                x:Load="{x:Bind ViewModel.Items.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Semibold"
                    Text="{l:ResourceString Rid=RecentlyDeleted}" />

                <tbv:TableView
                    x:Name="RecycleBinTableView"
                    Grid.Row="1"
                    Padding="0,0,12,0"
                    AlternateRowBackground="{ThemeResource ControlFillColorTertiaryBrush}"
                    AutoGenerateColumns="False"
                    BeginningEdit="RecycleBinTableView_BeginningEdit"
                    CanFilterColumns="False"
                    GridLinesVisibility="Horizontal"
                    IsReadOnly="True"
                    ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
                    SelectionChanged="RecycleBinTableView_SelectionChanged"
                    SelectionMode="Multiple"
                    SelectionUnit="Row">
                    <tbv:TableView.Columns>
                        <tbv:TableViewTextColumn
                            Width="*"
                            MinWidth="232"
                            Binding="{Binding Title}"
                            Header="{l:ResourceString Rid=Name}" />
                        <tbv:TableViewTextColumn
                            Width="136"
                            Binding="{Binding DeletionTimestamp, Converter={StaticResource DateTimeToStringConverter}}"
                            Header="{l:ResourceString Rid=DeletedAt}" />
                        <tbv:TableViewTextColumn
                            Width="2*"
                            MinWidth="400"
                            Binding="{Binding OriginalPath}"
                            Header="{l:ResourceString Rid=OriginalLocation}" />
                        <tbv:TableViewTextColumn
                            Width="112"
                            Binding="{Binding Size}"
                            Header="{l:ResourceString Rid=Size}" />
                    </tbv:TableView.Columns>
                </tbv:TableView>

                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="4">
                    <Button
                        Command="{x:Bind ViewModel.RestoreSelectedCommand}"
                        CommandParameter="{x:Bind RecycleBinTableView.SelectedItems, Mode=OneWay}"
                        Content="{l:ResourceString Rid=Restore}"
                        IsEnabled="{x:Bind ViewModel.IsSelecting, Mode=OneWay}" />
                    <Button
                        Command="{x:Bind ViewModel.DeleteSelectedCommand}"
                        CommandParameter="{x:Bind RecycleBinTableView.SelectedItems, Mode=OneWay}"
                        Content="{l:ResourceString Rid=DeleteImmediately}"
                        IsEnabled="{x:Bind ViewModel.IsSelecting, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</ContentDialog>
