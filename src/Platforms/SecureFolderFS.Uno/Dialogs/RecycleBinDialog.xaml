<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.RecycleBinDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucab="using:SecureFolderFS.Uno.UserControls.ActionBlocks"
    xmlns:vc="using:SecureFolderFS.Uno.ValueConverters"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls.Storage"
    Title="{l:ResourceString Rid=RecycleBin}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    SecondaryButtonText="{l:ResourceString Rid=Close}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <vc:NullToBoolConverter x:Key="NullToBoolConverter" />
        <vc:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </ContentDialog.Resources>

    <Grid Width="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToggleSwitch
            Grid.Row="0"
            IsOn="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}"
            Toggled="ToggleSwitch_Toggled" />

        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
            SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:RecycleBinItemViewModel">
                    <ucab:ActionBlockControl
                        Title="{x:Bind Title, Mode=OneWay}"
                        BlockMode="Default"
                        Description="{x:Bind OriginalPath, Mode=OneWay}">
                        <ucab:ActionBlockControl.ActionElement>
                            <Button>
                                <FontIcon Glyph="&#xE712;" />
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Command="{x:Bind RestoreCommand}" Text="{l:ResourceString Rid=Restore}" />
                                        <MenuFlyoutItem Command="{x:Bind DeletePermanentlyCommand}" Text="{l:ResourceString Rid=DeleteImmediately}" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </ucab:ActionBlockControl.ActionElement>
                    </ucab:ActionBlockControl>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
