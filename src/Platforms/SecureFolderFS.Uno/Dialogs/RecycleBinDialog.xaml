<ContentDialog
    x:Class="SecureFolderFS.Uno.Dialogs.RecycleBinDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:SecureFolderFS.Uno.Helpers"
    xmlns:l="using:SecureFolderFS.Uno.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ucab="using:SecureFolderFS.Uno.UserControls.ActionBlocks"
    xmlns:vm="using:SecureFolderFS.Sdk.ViewModels.Controls"
    xmlns:vm2="using:SecureFolderFS.Sdk.ViewModels.Controls.Storage"
    Title="{l:ResourceString Rid=RecycleBin}"
    RequestedTheme="{x:Bind h:UnoThemeHelper.Instance.CurrentElementTheme, Mode=OneWay}"
    SecondaryButtonText="{l:ResourceString Rid=Close}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMinWidth">600</x:Double>

        <Style x:Key="RecycleBinItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,0,0,2" />
            <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter
                            MinHeight="72"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            Background="{ThemeResource ExpanderHeaderBackground}"
                            BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}"
                            BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}"
                            CheckBoxBorderBrush="{ThemeResource ListViewItemCheckBoxBorderBrush}"
                            CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                            CheckBoxCornerRadius="{ThemeResource ListViewItemCheckBoxCornerRadius}"
                            CheckBoxDisabledBrush="{ThemeResource ListViewItemCheckBoxDisabledBrush}"
                            CheckBoxPointerOverBorderBrush="{ThemeResource ListViewItemCheckBoxPointerOverBorderBrush}"
                            CheckBoxPointerOverBrush="{ThemeResource ListViewItemCheckBoxPointerOverBrush}"
                            CheckBoxPressedBorderBrush="{ThemeResource ListViewItemCheckBoxPressedBorderBrush}"
                            CheckBoxPressedBrush="{ThemeResource ListViewItemCheckBoxPressedBrush}"
                            CheckBoxSelectedBrush="{ThemeResource ListViewItemCheckBoxSelectedBrush}"
                            CheckBoxSelectedDisabledBrush="{ThemeResource ListViewItemCheckBoxSelectedDisabledBrush}"
                            CheckBoxSelectedPointerOverBrush="{ThemeResource ListViewItemCheckBoxSelectedPointerOverBrush}"
                            CheckBoxSelectedPressedBrush="{ThemeResource ListViewItemCheckBoxSelectedPressedBrush}"
                            CheckBrush="{ThemeResource ListViewItemCheckBrush}"
                            CheckDisabledBrush="{ThemeResource ListViewItemCheckDisabledBrush}"
                            CheckPressedBrush="{ThemeResource ListViewItemCheckPressedBrush}"
                            ContentMargin="16,12"
                            ContentTransitions="{TemplateBinding ContentTransitions}"
                            Control.IsTemplateFocusTarget="True"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            DragBackground="{ThemeResource ListViewItemDragBackground}"
                            DragForeground="{ThemeResource ListViewItemDragForeground}"
                            FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                            FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                            FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                            PlaceholderBackground="{ThemeResource ListViewItemPlaceholderBackground}"
                            PointerOverBackground="{ThemeResource ListViewItemBackgroundPointerOver}"
                            PointerOverForeground="{ThemeResource ListViewItemForegroundPointerOver}"
                            PressedBackground="{ThemeResource ListViewItemBackgroundPressed}"
                            SelectedBackground="{ThemeResource ListViewItemBackgroundSelected}"
                            SelectedForeground="{ThemeResource ListViewItemForegroundSelected}"
                            SelectedPointerOverBackground="{ThemeResource ListViewItemBackgroundSelectedPointerOver}"
                            SelectedPressedBackground="{ThemeResource ListViewItemBackgroundSelectedPressed}"
                            SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentDialog.Resources>

    <Grid RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ucab:ActionBlockControl
            x:Name="RecycleBinActionBlock"
            Title="{l:ResourceString Rid=EnableRecycleBin}"
            Grid.Row="0"
            BlockMode="Expandable">
            <ucab:ActionBlockControl.ActionElement>
                <ToggleSwitch
                    MinWidth="0"
                    IsOn="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}"
                    Toggled="ToggleSwitch_Toggled" />
            </ucab:ActionBlockControl.ActionElement>
            <ucab:ActionBlockControl.Icon>
                <FontIcon Glyph="&#xE74D;" />
            </ucab:ActionBlockControl.Icon>
            <ucab:ActionBlockControl.ExpanderContent>
                <Grid Margin="0,-8" Padding="52,0,32,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{l:ResourceString Rid=MaximumSize}" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}"
                        ItemsSource="{x:Bind ViewModel.SizeOptions, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.CurrentSizeOption, Mode=TwoWay}"
                        SelectionChanged="SizeOptions_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:PickerOptionViewModel">
                                <TextBlock Text="{x:Bind Title, Mode=OneWay}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,12,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                    <ProgressRing
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="32"
                        Height="32"
                        Margin="0,12,0,0"
                        VerticalAlignment="Center"
                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                        IsIndeterminate="False"
                        Visibility="{x:Bind ViewModel.SpaceTakenText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                        Value="{x:Bind ViewModel.PercentageTaken, Mode=OneWay}" />
                </Grid>
            </ucab:ActionBlockControl.ExpanderContent>
        </ucab:ActionBlockControl>

        <Grid
            x:Name="RecycleBinContentsView"
            Grid.Row="1"
            x:Load="{x:Bind ViewModel.IsRecycleBinEnabled, Mode=OneWay}">
            <Grid
                x:Name="EmptyView"
                Padding="0,8,0,16"
                x:Load="{x:Bind ViewModel.Items.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}, ConverterParameter='invert'}">
                <TextBlock
                    HorizontalAlignment="Center"
                    Opacity="0.8"
                    Text="{l:ResourceString Rid=EmptyRecycleBinDescription}" />
            </Grid>

            <Grid
                x:Name="ItemsView"
                x:Load="{x:Bind ViewModel.Items.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Semibold"
                    Text="{l:ResourceString Rid=RecentlyDeleted}" />

                <ListView
                    x:Name="RecycleBinListView"
                    Grid.Row="1"
                    Margin="-4,0"
                    ItemContainerStyle="{StaticResource RecycleBinItemStyle}"
                    ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
                    SelectionChanged="RecycleBinListView_SelectionChanged"
                    SelectionMode="Multiple">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm2:RecycleBinItemViewModel">
                            <ucab:ActionBlockContentControl
                                x:Name="Block"
                                Title="{x:Bind Title, Mode=OneWay}"
                                Margin="-8,0,0,0"
                                Description="{x:Bind OriginalPath, Mode=OneWay}">
                                <ucab:ActionBlockContentControl.ActionElement>
                                    <Button
                                        Background="Transparent"
                                        BorderThickness="0"
                                        DataContext="{Binding DataContext, ElementName=Block}">
                                        <FontIcon Glyph="&#xE712;" />
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Command="{x:Bind RestoreCommand, Mode=OneWay}" Text="{l:ResourceString Rid=Restore}" />
                                                <MenuFlyoutItem Command="{x:Bind DeletePermanentlyCommand, Mode=OneWay}" Text="{l:ResourceString Rid=DeleteImmediately}" />
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </ucab:ActionBlockContentControl.ActionElement>
                            </ucab:ActionBlockContentControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="4">
                    <Button
                        Command="{x:Bind ViewModel.RestoreSelectedCommand}"
                        CommandParameter="{x:Bind RecycleBinListView.SelectedItems, Mode=OneWay}"
                        Content="{l:ResourceString Rid=Restore}"
                        IsEnabled="{x:Bind ViewModel.IsSelecting, Mode=OneWay}" />
                    <Button
                        Command="{x:Bind ViewModel.DeleteSelectedCommand}"
                        CommandParameter="{x:Bind RecycleBinListView.SelectedItems, Mode=OneWay}"
                        Content="{l:ResourceString Rid=DeleteImmediately}"
                        IsEnabled="{x:Bind ViewModel.IsSelecting, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</ContentDialog>
