<Application
    x:Class="SecureFolderFS.Uno.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--  Load WinUI resources  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--  Other dictionaries  -->
                <ResourceDictionary Source="ResourceDictionaries/ColorResources.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/ConverterResources.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/ImageResources.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/TextResources.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
